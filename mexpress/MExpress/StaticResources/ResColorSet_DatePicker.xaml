<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Mex="clr-namespace:MExpress.Mex">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/MExpress;component/StaticResources/ResColor.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <Mex:ColorSet_DatePicker x:Key="Mex/ResColorSet_DatePicker/Primary"
                             BorderDefault="{StaticResource Mex/ResColor/border_primary}"
                             BorderHover="{StaticResource Mex/ResColor/border_action_hover}"
                             BorderSelected="{StaticResource Mex/ResColor/border_selected}"
                             BorderDisabled="{StaticResource Mex/ResColor/border_disabled}"
                      
                             BackgroundDefault="{StaticResource Mex/ResColor/surface_primary}"
                             BackgroundHover="{StaticResource Mex/ResColor/surface_primary}"
                             BackgroundSelected="{StaticResource Mex/ResColor/surface_primary}"
                             BackgroundDisabled="{StaticResource Mex/ResColor/surface_disabled}"
 
                             ForegroundDefault="{StaticResource Mex/ResColor/text_body}"
                             ForegroundHover="{StaticResource Mex/ResColor/text_body}"
                             ForegroundSelected="{StaticResource Mex/ResColor/text_body}"
                             ForegroundDisabled="{StaticResource Mex/ResColor/text_on_disabled}"
                      
                             WaterMarkForegroundDefault="{StaticResource Mex/ResColor/text_placeholder}"
                             WaterMarkForegroundHover="{StaticResource Mex/ResColor/text_placeholder}"
                             WaterMarkForegroundSelected="{StaticResource Mex/ResColor/text_placeholder}"
                             WaterMarkForegroundDisabled="{StaticResource Mex/ResColor/text_disabled}"
                             
                             ButtonDefault="{StaticResource Mex/ResColor/surface_action}"
                             ButtonHover="{StaticResource Mex/ResColor/surface_action_hover}"
                             ButtonSelected="{StaticResource Mex/ResColor/surface_action_pressed}"
                             ButtonDisabled="{StaticResource Mex/ResColor/border_disabled}">
    </Mex:ColorSet_DatePicker>
    
</ResourceDictionary>