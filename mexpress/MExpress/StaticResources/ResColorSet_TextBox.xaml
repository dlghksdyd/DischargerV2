<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Mex="clr-namespace:MExpress.Mex">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/MExpress;component/StaticResources/ResColor.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <Mex:ColorSet_TextBox x:Key="Mex/ResColorSet_TextBox/Primary"
                          BorderDefault="{StaticResource Mex/ResColor/border_primary}"
                          BorderHover="{StaticResource Mex/ResColor/border_action_hover}"
                          BorderSelected="{StaticResource Mex/ResColor/border_selected}"
                          BorderDisabled="{StaticResource Mex/ResColor/border_disabled}"
                          
                          BackgroundDefault="{StaticResource Mex/ResColor/surface_primary}"
                          BackgroundHover="{StaticResource Mex/ResColor/surface_primary}"
                          BackgroundSelected="{StaticResource Mex/ResColor/surface_primary}"
                          BackgroundDisabled="{StaticResource Mex/ResColor/surface_disabled}"
 
                          ForegroundDefault="{StaticResource Mex/ResColor/text_body}"
                          ForegroundHover="{StaticResource Mex/ResColor/text_body}"
                          ForegroundSelected="{StaticResource Mex/ResColor/text_body}"
                          ForegroundDisabled="{StaticResource Mex/ResColor/text_on_disabled}"
                          
                          WaterMarkForegroundDefault="{StaticResource Mex/ResColor/text_placeholder}"
                          WaterMarkForegroundHover="{StaticResource Mex/ResColor/text_placeholder}"
                          WaterMarkForegroundSelected="{StaticResource Mex/ResColor/text_placeholder}"
                          WaterMarkForegroundDisabled="{StaticResource Mex/ResColor/text_disabled}">
    </Mex:ColorSet_TextBox>
    
    <Mex:ColorSet_TextBox x:Key="Mex/ResColorSet_TextBox/Primary_Dark"
                          BorderDefault="{StaticResource Mex/ResColor/dark_border_primary}"
                          BorderHover="{StaticResource Mex/ResColor/dark_border_action_hover}"
                          BorderSelected="{StaticResource Mex/ResColor/dark_border_selected}"
                          BorderDisabled="{StaticResource Mex/ResColor/dark_border_disabled}"
                          
                          BackgroundDefault="{StaticResource Mex/ResColor/dark_surface_primary}"
                          BackgroundHover="{StaticResource Mex/ResColor/dark_surface_primary}"
                          BackgroundSelected="{StaticResource Mex/ResColor/dark_surface_primary}"
                          BackgroundDisabled="{StaticResource Mex/ResColor/dark_surface_disabled}"
 
                          ForegroundDefault="{StaticResource Mex/ResColor/dark_text_body}"
                          ForegroundHover="{StaticResource Mex/ResColor/dark_text_body}"
                          ForegroundSelected="{StaticResource Mex/ResColor/dark_text_body}"
                          ForegroundDisabled="{StaticResource Mex/ResColor/dark_text_on_disabled}"
                          
                          WaterMarkForegroundDefault="{StaticResource Mex/ResColor/text_placeholder}"
                          WaterMarkForegroundHover="{StaticResource Mex/ResColor/text_placeholder}"
                          WaterMarkForegroundSelected="{StaticResource Mex/ResColor/text_placeholder}"
                          WaterMarkForegroundDisabled="{StaticResource Mex/ResColor/text_placeholder}">
    </Mex:ColorSet_TextBox>
    
</ResourceDictionary>