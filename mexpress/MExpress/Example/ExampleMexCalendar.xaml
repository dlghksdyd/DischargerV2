<Window x:Class="MExpress.Example.ExampleMexCalendar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MExpress.Example"
        xmlns:Mex="clr-namespace:MExpress.Mex"
        mc:Ignorable="d"
        Title="ExampleMexCalendar" Height="600" Width="800">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MExpress;component/Themes/Generic.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Mex:MexCalendar Grid.Row="0"
                         Width="320" Height="320"
                         Background="White"
                         BorderBrush="Pink"
                         BorderThickness="5"
                         CornerRadius="0"/>
    </Grid>

</Window>
