                             BorderBrush="Red" 
                             BorderThickness="1"
                             Padding="10"
                             HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <Mex:MexTextBlock Text="Test1 __________________________"/>
