<Window x:Class="MExpress.Example.ExampleMexTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MExpress.Example"
        xmlns:Mex="clr-namespace:MExpress.Mex"
        mc:Ignorable="d"
        Title="ExampleMexTable" Height="500" Width="1200">
    <Grid>
        <Label Content=""></Label>
        <StackPanel>
            <Mex:MexTable ColumnCount="4" Width="1000" Height="200" CornerRadius="5">
                <Mex:MexTable.Header>
                    <Mex:MexTableHeader Height="52">
                        <Mex:MexTableHeaderColumn Width="60" HorizontalContentAlignment="Center">No.</Mex:MexTableHeaderColumn>
                        <Mex:MexTableHeaderColumn Width="360">Discharger Name</Mex:MexTableHeaderColumn>
                        <Mex:MexTableHeaderColumn Width="140">Channel</Mex:MexTableHeaderColumn>
                        <Mex:MexTableHeaderColumn Width="200">Status</Mex:MexTableHeaderColumn>
                    </Mex:MexTableHeader>
                </Mex:MexTable.Header>
                <Mex:MexTable.Rows>
                    <Mex:MexTableRow Height="52">
                        <Mex:MexTableRowColumn HorizontalContentAlignment="Center">1</Mex:MexTableRowColumn>
                        <Mex:MexTableRowColumn>로우2-1</Mex:MexTableRowColumn>
                        <Mex:MexTableRowColumn>로우2-2</Mex:MexTableRowColumn>
                        <Mex:MexTableRowColumn>로우2-3</Mex:MexTableRowColumn>
                    </Mex:MexTableRow>
                    <Mex:MexTableRow Height="52">
                        <Mex:MexTableRowColumn HorizontalContentAlignment="Center">2</Mex:MexTableRowColumn>
                        <Mex:MexTableRowColumn>로우1-1</Mex:MexTableRowColumn>
                        <Mex:MexTableRowColumn>로우1-2</Mex:MexTableRowColumn>
                        <Mex:MexTableRowColumn>로우1-3</Mex:MexTableRowColumn>
                    </Mex:MexTableRow>
                    <Mex:MexTableRow Height="52">
                        <Mex:MexTableRowColumn HorizontalContentAlignment="Center">2</Mex:MexTableRowColumn>
                        <Mex:MexTableRowColumn>로우3-1</Mex:MexTableRowColumn>
                        <Mex:MexTableRowColumn>로우3-2</Mex:MexTableRowColumn>
                        <Mex:MexTableRowColumn>로우3-3</Mex:MexTableRowColumn>
                    </Mex:MexTableRow>
                </Mex:MexTable.Rows>
            </Mex:MexTable>
        </StackPanel>
    </Grid>
</Window>
