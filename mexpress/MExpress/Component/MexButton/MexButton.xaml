<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MExpress.Mex">

    <Style TargetType="{x:Type local:MexButton}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MexButton}">
                    <Border x:Name="xBorder"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Background="{TemplateBinding Background}"
                            Margin="-1">
                        <Grid x:Name="xGrid" 
                              Margin="{TemplateBinding Padding}"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image x:Name="xLeftImage" 
                                   Grid.Column="0" Grid.Row="1"
                                   Width="{TemplateBinding ImageWidth}"
                                   Height="{TemplateBinding ImageHeight}"
                                   Source="{TemplateBinding ImageLeft}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            <Image x:Name="xTopImage" 
                                   Grid.Column="1" Grid.Row="0"
                                   Width="{TemplateBinding ImageWidth}"
                                   Height="{TemplateBinding ImageHeight}"
                                   Source="{TemplateBinding ImageTop}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            <Image x:Name="xRightImage" 
                                   Grid.Column="2" Grid.Row="1"
                                   Width="{TemplateBinding ImageWidth}"
                                   Height="{TemplateBinding ImageHeight}"
                                   Source="{TemplateBinding ImageRight}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            <Image x:Name="xBottomImage" 
                                   Grid.Column="1" Grid.Row="2"
                                   Width="{TemplateBinding ImageWidth}"
                                   Height="{TemplateBinding ImageHeight}"
                                   Source="{TemplateBinding ImageBottom}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            <Grid Grid.Column="1" Grid.Row="1"
                                  Height="{TemplateBinding FontHeight}">
                                <TextBlock x:Name="xTextBlock" 
                                           Text="{TemplateBinding Text}"
                                           FontFamily="{TemplateBinding FontFamily}"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"
                                           Margin="{TemplateBinding TextPadding}"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsShadow" Value="True">
                            <Setter Property="Effect" TargetName="xBorder">
                                <Setter.Value>
                                    <DropShadowEffect Color="#55000000" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.4"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="ImageLeft" Value="{x:Null}">
                            <Setter Property="Visibility" TargetName="xLeftImage" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="ImageTop" Value="{x:Null}">
                            <Setter Property="Visibility" TargetName="xTopImage" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="ImageRight" Value="{x:Null}">
                            <Setter Property="Visibility" TargetName="xRightImage" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="ImageBottom" Value="{x:Null}">
                            <Setter Property="Visibility" TargetName="xBottomImage" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>