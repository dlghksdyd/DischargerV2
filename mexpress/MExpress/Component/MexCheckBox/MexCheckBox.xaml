<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MExpress.Mex">
    
    <Style TargetType="{x:Type local:MexCheckBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MexCheckBox}">
                    <StackPanel x:Name="xStackPanel" Orientation="Horizontal" 
                                Margin="{TemplateBinding Margin}"
                                FlowDirection="{TemplateBinding FlowDirection}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                        <Grid>
                            <Border x:Name="xInnerBorder"
                                    Width="{TemplateBinding InnerCheckBoxSize}" 
                                    Height="{TemplateBinding InnerCheckBoxSize}" 
                                    CornerRadius="{TemplateBinding InnerCornerRadius}"
                                    Background="{TemplateBinding Background}">
                                <Path x:Name="xPath" 
                                      Visibility="{TemplateBinding PathVisibility}"
                                      Width="{TemplateBinding CheckBoxPathSize}" 
                                      Height="{TemplateBinding CheckBoxPathSize}"
                                      Stroke="{TemplateBinding Stroke}" 
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round" 
                                      StrokeEndLineCap="Round"
                                      Data="{TemplateBinding PathData}"/>
                            </Border>
                            <Border x:Name="xBorder"
                                    Width="{TemplateBinding CheckBoxSize}" 
                                    Height="{TemplateBinding CheckBoxSize}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    BorderBrush="{TemplateBinding BorderBrush}" />
                        </Grid>
                        <Grid Height="{TemplateBinding FontHeight}">
                            <TextBlock x:Name="xTextBlock"
                                       Text="{TemplateBinding Text}"
                                       FontFamily="{TemplateBinding FontFamily}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       Foreground="{TemplateBinding Foreground}"
                                       Padding="{TemplateBinding Padding}"
                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>