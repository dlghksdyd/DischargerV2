<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MExpress.Mex">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/MExpress;component/StaticResources/ResColor.xaml"></ResourceDictionary>
        <ResourceDictionary Source="/MExpress;component/StaticResources/ResImage.xaml"></ResourceDictionary>
        <ResourceDictionary Source="/MExpress;component/StaticResources/ResFont.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <local:ImageColorConverter x:Key="ImageColorConverter"/>

    <Style TargetType="{x:Type local:MexCalendar}">
        <Setter Property="CalendarItemStyle" Value="{DynamicResource CalendarItemStyle}"/>
        <Setter Property="CalendarDayButtonStyle" Value="{DynamicResource CalendarCalendarDayButtonStyle}"/>
        <Setter Property="CalendarButtonStyle" Value="{DynamicResource CalendarCalendarButtonStyle}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Mex/ResColor/border_primary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource Mex/ResColor/surface_primary}"/>
        <Setter Property="Foreground" Value="{StaticResource Mex/ResColor/text_body}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MexCalendar}">
                    <StackPanel x:Name="PART_Root" 
                                HorizontalAlignment="Center">
                        <CalendarItem x:Name="PART_CalendarItem" 
                                      Style="{TemplateBinding CalendarItemStyle}"
                                      Width="{TemplateBinding Width}"
                                      Height="{TemplateBinding Height}"
                                      Background="{TemplateBinding Background}" 
                                      BorderBrush="{TemplateBinding BorderBrush}" 
                                      BorderThickness="{TemplateBinding BorderThickness}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CalendarItemStyle" TargetType="{x:Type CalendarItem}">
        <Setter Property="Foreground" Value="{StaticResource Mex/ResColor/text_body}"/>
        <Setter Property="FontFamily" Value="{StaticResource Mex/ResFontFimily/pretendard_medium}"/>
        <Setter Property="FontSize" Value="{StaticResource Mex/ResFontSize/body_md}"/>
        <Setter Property="FontWeight" Value="{StaticResource Mex/ResFontWeight/medium}"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarItem}">
                    <ControlTemplate.Resources>
                        <DataTemplate x:Key="{x:Static CalendarItem.DayTitleTemplateResourceKey}">
                            <TextBlock Foreground="{Binding Path=Foreground,
                                                            RelativeSource={RelativeSource AncestorType={x:Type CalendarItem}}}"
                                       FontFamily="{Binding Path=FontFamily,
                                                          RelativeSource={RelativeSource AncestorType={x:Type CalendarItem}}}"  
                                       FontSize="{Binding Path=FontSize,
                                                          RelativeSource={RelativeSource AncestorType={x:Type CalendarItem}}}" 
                                       FontWeight="{Binding Path=FontWeight,
                                                            RelativeSource={RelativeSource AncestorType={x:Type CalendarItem}}}" 
                                       HorizontalAlignment="Center" 
                                       Text="{Binding}" 
                                       VerticalAlignment="Center"/>
                        </DataTemplate>
                    </ControlTemplate.Resources>
                    <Grid x:Name="PART_Root">
                        <Border Width="{TemplateBinding Width}" 
                                Height="{TemplateBinding Height}"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="{Binding Path=CornerRadius,
                                                       RelativeSource={RelativeSource AncestorType={x:Type local:MexCalendar}}}">
                            <Border>
                                <Grid Margin="8">
                                    <Grid.Resources>
                                        <ControlTemplate x:Key="PreviousButtonTemplate" TargetType="{x:Type Button}">
                                            <Image Width="24" Height="24" 
                                                   Source="{Binding Source={StaticResource Mex/ResImage/navigate_before},
                                                                    Converter={StaticResource ImageColorConverter},
                                                                    ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                                                   Cursor="Hand"
                                                   Focusable="False" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        </ControlTemplate>
                                        <ControlTemplate x:Key="NextButtonTemplate" TargetType="{x:Type Button}">
                                            <Image Width="24" Height="24" 
                                                   Source="{Binding Source={StaticResource Mex/ResImage/navigate_next},
                                                                    Converter={StaticResource ImageColorConverter},
                                                                    ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                                                   Cursor="Hand"
                                                   Focusable="False" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        </ControlTemplate>
                                        <ControlTemplate x:Key="HeaderButtonTemplate" TargetType="{x:Type Button}">
                                            <ContentPresenter x:Name="buttonContent" 
                                                              ContentTemplate="{TemplateBinding ContentTemplate}" 
                                                              Content="{TemplateBinding Content}" 
                                                              Margin="16 0 16 0"
                                                              TextElement.Foreground="{StaticResource Mex/ResColor/text_headings}" 
                                                              TextElement.FontSize="{StaticResource Mex/ResFontSize/body_md}"
                                                              TextElement.FontWeight="{StaticResource Mex/ResFontWeight/bold}"
                                                              Cursor="Hand"
                                                              Focusable="False"
                                                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </ControlTemplate>
                                    </Grid.Resources>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="PART_PreviousButton" 
                                            Template="{StaticResource PreviousButtonTemplate}" 
                                            Grid.Row="0" Grid.Column="0"/>
                                    <Button x:Name="PART_HeaderButton" 
                                            Template="{StaticResource HeaderButtonTemplate}" 
                                            Grid.Row="0" Grid.Column="1"/>
                                    <Button x:Name="PART_NextButton" 
                                            Template="{StaticResource NextButtonTemplate}"
                                            Grid.Column="2" Grid.Row="0"/>
                                    <Grid x:Name="PART_MonthView" 
                                          Grid.ColumnSpan="3" Grid.Row="1"
                                          VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                          Visibility="Visible">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                    </Grid>
                                    <Grid x:Name="PART_YearView" 
                                          Grid.Row="1" Grid.ColumnSpan="3" 
                                          VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                          Visibility="Hidden">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Value="Year"
                                     Binding="{Binding DisplayMode, 
                                                       RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Calendar}}}">
                            <Setter Property="Visibility" TargetName="PART_MonthView" Value="Hidden"/>
                            <Setter Property="Visibility" TargetName="PART_YearView" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Value="Decade"
                                     Binding="{Binding DisplayMode, 
                                                       RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Calendar}}}">
                            <Setter Property="Visibility" TargetName="PART_MonthView" Value="Hidden"/>
                            <Setter Property="Visibility" TargetName="PART_YearView" Value="Visible"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CalendarCalendarDayButtonStyle" TargetType="{x:Type CalendarDayButton}">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="FontFamily" Value="{StaticResource Mex/ResFontFimily/pretendard_regular}"/>
        <Setter Property="FontSize" Value="{StaticResource Mex/ResFontSize/body_md}"/>
        <Setter Property="FontWeight" Value="{StaticResource Mex/ResFontWeight/regular}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.1"/>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" 
                                                         Storyboard.TargetName="Background" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0"/>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Unselected"/>
                                <VisualState x:Name="Selected">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="SelectedBackground" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                        <ColorAnimation Duration="0"  
                                                        Storyboard.TargetName="NormalText" 
                                                        Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                        To="White"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ActiveStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0"/>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Active"/>
                                <VisualState x:Name="Inactive">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" 
                                                         Storyboard.TargetName="InactiveBackground" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                        <ColorAnimation Duration="0" 
                                                        Storyboard.TargetName="NormalText" 
                                                        Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                        To="{StaticResource Mex/ResColorBrand/color_light_grey_400}"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="DayStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0"/>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="RegularDay"/>
                                <VisualState x:Name="Today">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" 
                                                         Storyboard.TargetName="TodayBackground" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="NormalText" 
                                                        Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                        To="White"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Rectangle x:Name="InactiveBackground" 
                                   Fill="{StaticResource Mex/ResColor/surface_disabled}" 
                                   Opacity="0" 
                                   RadiusX="4" RadiusY="4"/>
                        <Rectangle x:Name="TodayBackground" 
                                   Fill="{StaticResource Mex/ResColor/surface_disabled_selected}" 
                                   Opacity="0" 
                                   RadiusX="5" RadiusY="5" Margin="0.2"/>
                        <Rectangle x:Name="SelectedBackground" 
                                   Fill="{StaticResource Mex/ResColor/surface_action}" 
                                   Opacity="0" 
                                   RadiusX="5" RadiusY="5" Margin="0.2"/>
                        <Rectangle x:Name="Background" 
                                   Fill="{StaticResource Mex/ResColor/surface_action_hover2}"
                                   Opacity="0" 
                                   RadiusX="4" RadiusY="4" 
                                   Cursor="Hand">
                        </Rectangle>
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                        <ContentPresenter x:Name="NormalText" 
                                          TextElement.Foreground="{StaticResource Mex/ResColor/text_body}" 
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Cursor="Hand"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CalendarCalendarButtonStyle" TargetType="{x:Type CalendarButton}">
        <Setter Property="Height" Value="60"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="FontFamily" Value="{StaticResource Mex/ResFontFimily/pretendard_regular}"/>
        <Setter Property="FontSize" Value="{StaticResource Mex/ResFontSize/body_lg}"/>
        <Setter Property="FontWeight" Value="{StaticResource Mex/ResFontWeight/regular}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarButton}">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.1"/>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" 
                                                         Storyboard.TargetName="Background"  
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0"/>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Unselected"/>
                                <VisualState x:Name="Selected">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" 
                                                         Storyboard.TargetName="SelectedBackground" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                        <ColorAnimation Duration="0"  
                                                        Storyboard.TargetName="NormalText" 
                                                        Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                        To="White"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ActiveStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0"/>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Active"/>
                                <VisualState x:Name="Inactive"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Rectangle x:Name="SelectedBackground" 
                                   Fill="{StaticResource Mex/ResColor/surface_action}" 
                                   Opacity="0" 
                                   RadiusX="9" RadiusY="9" Margin="0.3"/>
                        <Rectangle x:Name="Background" 
                                   Fill="{StaticResource Mex/ResColor/surface_action_hover2}" 
                                   Opacity="0" 
                                   RadiusX="8" RadiusY="8"
                                   Cursor="Hand"/>
                        <ContentPresenter x:Name="NormalText" 
                                          TextElement.Foreground="{StaticResource Mex/ResColor/text_body}" 
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Cursor="Hand"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>