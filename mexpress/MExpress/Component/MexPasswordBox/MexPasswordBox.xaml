<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MExpress.Mex"
                    xmlns:b="http://schemas.microsoft.com/xaml/behaviors">

    <local:DoubleToGridLengthConverter x:Key="DoubleToGridLengthConverter"/>
    
    <Style TargetType="{x:Type local:MexPasswordBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MexPasswordBox}">
                    <Border x:Name="xBorder"
                            DataContext="{TemplateBinding ViewModel}"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Background="{TemplateBinding Background}">
                        <Grid x:Name="xGrid" Margin="{TemplateBinding Padding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" x:Name="xContentGrid" Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Image x:Name="xLeftImage" Grid.Column="0"
                                       Width="{TemplateBinding ImageWidth}"
                                       Height="{TemplateBinding ImageHeight}"
                                       Source="{TemplateBinding ImageLeft}"/>
                                <Grid Grid.Column="1"
                                      Height="{TemplateBinding FontHeight}">
                                    <TextBlock x:Name="xWaterMarkTextBlock"
                                               Visibility="{TemplateBinding WaterMarkVisibility}"
                                               Text="{TemplateBinding WaterMark}"
                                               Foreground="{TemplateBinding WaterMarkForground}"
                                               FontFamily="{TemplateBinding FontFamily}"
                                               FontSize="{TemplateBinding FontSize}"
                                               FontWeight="{TemplateBinding FontWeight}"
                                               Margin="{TemplateBinding TextPadding}"
                                               HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                               VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                               Focusable="False"/>
                                    <TextBox x:Name="xPasswordTextBox"
                                             Visibility="{TemplateBinding TextBoxVisibility}"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="{TemplateBinding Foreground}"
                                             FontFamily="{TemplateBinding FontFamily}"
                                             FontSize="{TemplateBinding FontSize}"
                                             FontWeight="{TemplateBinding FontWeight}"
                                             Height="{TemplateBinding FontHeight}"
                                             Margin="{TemplateBinding TextPadding}"
                                             HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                             VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                             Focusable="{TemplateBinding Focusable}">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="TextChanged">
                                                <b:InvokeCommandAction Command="{Binding OnTextChangedCommand}"></b:InvokeCommandAction>
                                            </b:EventTrigger>
                                            <b:EventTrigger EventName="Loaded">
                                                <b:InvokeCommandAction Command="{Binding OnTextBoxLoadedCommand}" CommandParameter="{Binding ElementName=xPasswordTextBox}"></b:InvokeCommandAction>
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                    </TextBox>
                                    <PasswordBox x:Name="xPasswordBox"
                                                 Visibility="{TemplateBinding PasswordBoxVisibility}"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Foreground="{TemplateBinding Foreground}"
                                                 FontFamily="{TemplateBinding FontFamily}"
                                                 FontSize="{TemplateBinding FontSize}"
                                                 FontWeight="{TemplateBinding FontWeight}"
                                                 Height="{TemplateBinding FontHeight}"
                                                 Margin="{TemplateBinding TextPadding}"
                                                 HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                 VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                 Focusable="{TemplateBinding Focusable}">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="PasswordChanged">
                                                <b:InvokeCommandAction Command="{Binding OnPasswordChangedCommand}"></b:InvokeCommandAction>
                                            </b:EventTrigger>
                                            <b:EventTrigger EventName="Loaded">
                                                <b:InvokeCommandAction Command="{Binding OnPasswordBoxLoadedCommand}" CommandParameter="{Binding ElementName=xPasswordBox}"></b:InvokeCommandAction>
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                    </PasswordBox>
                                </Grid>
                                <Image x:Name="xRightImage" Grid.Column="2"
                                       Width="{TemplateBinding ImageWidth}"
                                       Height="{TemplateBinding ImageHeight}"
                                       Source="{TemplateBinding ImageRight}"/>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Image x:Name="xHidePasswordImage"
                                       Width="{TemplateBinding ImageSizeHidePassword}"
                                       Height="{TemplateBinding ImageSizeHidePassword}"
                                       Source="{TemplateBinding ImageHidePassword}"
                                       Cursor="Hand">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="MouseLeftButtonDown">
                                            <b:InvokeCommandAction Command="{Binding OnIsHidePasswordChangedCommand}"></b:InvokeCommandAction>
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                </Image>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>