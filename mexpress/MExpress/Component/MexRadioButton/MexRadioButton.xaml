<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MExpress.Mex">

    <Style TargetType="{x:Type local:MexRadioButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MexRadioButton}">
                    <StackPanel x:Name="templateRoot" Orientation="Horizontal" 
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                FlowDirection="{TemplateBinding FlowDirection}"
                                Background="Transparent" 
                                SnapsToDevicePixels="True">
                        <Grid x:Name="markGrid" 
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                              Cursor="Hand">
                            <Ellipse x:Name="xOutterEllipse"
                                     Width="{TemplateBinding ButtonSize}" 
                                     Height="{TemplateBinding ButtonSize}"
                                     Fill="{TemplateBinding BorderBrush}"/>
                            <Ellipse x:Name="xInnerEllipse"
                                     Width="{TemplateBinding ButtonInnerSize}" 
                                     Height="{TemplateBinding ButtonInnerSize}"
                                     Fill="{TemplateBinding Background}"/>
                            <Ellipse x:Name="xCheckEllipse" 
                                     Width="{TemplateBinding CheckSize}" 
                                     Height="{TemplateBinding CheckSize}"
                                     MinWidth="6" MinHeight="6" 
                                     Fill="{TemplateBinding CheckFill}" 
                                     Opacity="0"/>
                        </Grid>
                        <TextBlock x:Name="xTextBlock" 
                                   Text="{TemplateBinding Text}"
                                   Foreground="{TemplateBinding Foreground}"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   Margin="{TemplateBinding TextPadding}"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                   Focusable="False"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Opacity" TargetName="xCheckEllipse" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Opacity" TargetName="xCheckEllipse" Value="0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>