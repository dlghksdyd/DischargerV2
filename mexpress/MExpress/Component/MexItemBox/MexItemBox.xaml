<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MExpress.Mex">

    <Style TargetType="{x:Type local:MexItemBox}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MexItemBox}">
                    <Border x:Name="xClipBorder"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}">
                        <Border.Clip>
                            <RectangleGeometry RadiusX="{Binding ClipRadius, RelativeSource={RelativeSource AncestorType=local:MexItemBox, Mode=FindAncestor, AncestorLevel=1}}"
                                               RadiusY="{Binding ClipRadius, RelativeSource={RelativeSource AncestorType=local:MexItemBox, Mode=FindAncestor, AncestorLevel=1}}"
                                               Rect="{Binding ClipRect, RelativeSource={RelativeSource AncestorType=local:MexItemBox, Mode=FindAncestor, AncestorLevel=1}}"/>
                        </Border.Clip>
                        <Grid>
                            <ContentPresenter x:Name="xContent" 
                                              Content="{TemplateBinding Content}"
                                              Margin="{TemplateBinding Padding}"/>
                            <Border x:Name="xBorder"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>