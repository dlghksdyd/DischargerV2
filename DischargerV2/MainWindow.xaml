            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <uc:UserControlTopbar Grid.Row="0"></uc:UserControlTopbar>
        <!--<view:Login Grid.Row="1"></view:Login>-->
        <Mex:MexComboBox Grid.Row="1" x:Name="xMexComboBox"
                 Width="190" Height="40" 
                 WaterMark="ComboBox TEST"
                 FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                 ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}">
        </Mex:MexComboBox>
    </Grid>
