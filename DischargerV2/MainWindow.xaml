        mc:Ignorable="d"
        Title="MainWindow" Height="1030" Width="1920" MaxHeight="1080" MaxWidth="1920" WindowStyle="None" WindowState="Maximized" ResizeMode="NoResize">
    
    <Grid x:Name="xTopGrid" Cursor="">
