<Window xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DischargerV2"
        xmlns:uc="clr-namespace:DischargerV2.UserControls"
        xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
        x:Class="DischargerV2.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="1030" Width="1920" 
        MaxHeight="1080" MaxWidth="1920" 
        WindowStyle="None" WindowState="Maximized" ResizeMode="NoResize">
    
    <Grid x:Name="xTopGrid" Cursor="">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <uc:UserControlTopbar Grid.Row="0"></uc:UserControlTopbar>
        <!--<view:ViewLogin Grid.Row="1"></view:ViewLogin>-->

        <Grid Grid.Row="1" 
              Width="350" Height="150"
              Background="AliceBlue">
            <Mex:MexComboBox x:Name="xComboBox"
                             Padding="12,8,12,8" Width="120" Height="50"
                             WaterMark="Select"
                             Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                             FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                             ImageSizeDropDown="24"
                             ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                             ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
            <Mex:MexButton x:Name="xAddButton"
                           Padding="24,10,24,10"
                           BorderThickness="1"
                           CornerRadius="8"
                           ImageWidth="20" ImageHeight="20"
                           ImageSetLeft="{StaticResource Mex/ResImageSet_Component/SettingsButtonOutline}"
                           Text="New Device"
                           FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                           TextPadding="12,0,0,0"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/PrimaryOutline}"
                           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,20,0,0"/>
        </Grid>
        
        <Rectangle x:Name="xTopRectangle" Grid.Row="0" Grid.Column="0" Grid.RowSpan="100" Grid.ColumnSpan="100" 
                   Fill="#22000000" 
                   Visibility="Hidden"></Rectangle>
    </Grid>
</Window>