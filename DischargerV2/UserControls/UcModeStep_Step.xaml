<UserControl x:Class="DischargerV2.UserControls.UcModeStep_Step"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2.UserControls"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="84" d:DesignWidth="902">

    <Border Width="902" Height="84" 
            BorderBrush="{StaticResource Mex/ResColor/border_primary}"
            BorderThickness="1"
            CornerRadius="8"
            Background="{StaticResource Mex/ResColor/surface_page}">
        <Grid Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Mex:MexTextBlock x:Name="xNoTextBlock" Grid.Column="0"
                              Text="1"
                              Foreground="{StaticResource Mex/ResColor/text_body}"
                              FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
            <StackPanel Orientation="Vertical" Grid.Column="2"
                        Margin="20,0,20,0"
                        VerticalAlignment="Center">
                <Mex:MexTextBlock Text="Voltage (V)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexTextBox x:Name="xVoltTextBox"
                                Padding="12,8,12,8"
                                WaterMark="Enter Voltage"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="3"
                        Margin="20,0,20,0"
                        VerticalAlignment="Center">
                <Mex:MexTextBlock Text="Current (A)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexTextBox x:Name="xCurrTextBox"
                                Padding="12,8,12,8"
                                WaterMark="Enter Current"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="4"
                        Margin="20,0,20,0"
                        VerticalAlignment="Center">
                <Mex:MexTextBlock Text="C-Rate"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexTextBox x:Name="xCRateTextBox"
                                Padding="12,8,12,8"
                                WaterMark="Enter C-Rate"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
            <Mex:MexButton x:Name="xDeleteButton" Grid.Column="6"
                           Padding="12"
                           BorderThickness="1"
                           CornerRadius="8"
                           ImageWidth="24" ImageHeight="24"
                           ImageSetLeft="{StaticResource Mex/ResImageSet_Component/CloseButtonIcon}"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}"/>
        </Grid>
    </Border>
</UserControl>
