<UserControl x:Class="DischargerV2.UserControls.UcDeviceRegister_Edit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="208" d:DesignWidth="1520">

    <Border Width="1520" Height="208"
        BorderBrush="{StaticResource Mex/ResColor/border_action}"
        BorderThickness="2"
        CornerRadius="8"
        Background="{StaticResource Mex/ResColor/surface_page}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="84"></RowDefinition>
                <RowDefinition Height="32"></RowDefinition>
                <RowDefinition Height="92"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="0,0,0,1">
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="8"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--Device Name-->
                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Name"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xDeciveNameTextBox"
                                        Padding="12,8,12,8"
                                        CornerRadius="8"
                                        BorderThickness="1"
                                        WaterMark="Enter Name"
                                        Foreground="{StaticResource Mex/ResColor/text_body}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                    <!--IP Address-->
                    <StackPanel Grid.Column="2" 
                                Orientation="Vertical"
                                VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="IP"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xIpAddressTextBox"
                                        Padding="12,8,12,8"
                                        CornerRadius="8"
                                        BorderThickness="1"
                                        WaterMark="Enter IP"
                                        Foreground="{StaticResource Mex/ResColor/text_body}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                    <!--CheckNSave-->
                    <Mex:MexButton x:Name="xCheckNSaveButton" Grid.Column="4"
                                   Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/SaveButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}"/>
                    <!--Cancel-->
                    <Mex:MexButton x:Name="xCancelButton" Grid.Column="6" 
                                   Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/CloseButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}"/>
                </Grid>
            </Border>
            <Grid Grid.Row="1"
              Background="{StaticResource Mex/ResColor/surface_secondary}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="951"></ColumnDefinition>
                    <ColumnDefinition Width="569"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0" 
                              Text="Discharger"
                              BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                              BorderThickness="0,0,1,0"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                              HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Mex:MexTextBlock Grid.Column="1" 
                              Text="Temperature Module"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                              HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--Model-->
                <Border Grid.Column="0"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Model"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xModelComboBox"
                                         Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--Type-->
                <Border Grid.Column="1"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Type"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xTypeComboBox"
                                         Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--Channel-->
                <Border Grid.Column="2"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Channel"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xChannelTextBox"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--VoltSpec-->
                <Border Grid.Column="3"
                     BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                     BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="VoltSpec(V)"
                                       Foreground="{StaticResource Mex/ResColor/text_body}"
                                       FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xVoltSpecComboBox"
                                         Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--CurrSpec-->
                <Border Grid.Column="4"
                      BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                      BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="CurrSpec(A)"
                                      Foreground="{StaticResource Mex/ResColor/text_body}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xCurrSpecComboBox"
                                         Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--Comport-->
                <Border Grid.Column="5"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Comport"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xComportTextBox"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--ModuleChannel-->
                <Border Grid.Column="6"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="ModuleChannel"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xModuleChannelTextBox"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--TempChannel-->
                <Border Grid.Column="7"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="TempChannel"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xTempChannelTextBox"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
