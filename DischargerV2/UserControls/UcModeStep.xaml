<UserControl x:Class="DischargerV2.UserControls.UcModeStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="440" d:DesignWidth="990"
             Background="{StaticResource Mex/ResColor/surface_page}">

    <Border Margin="32,20,32,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0"
                                  Text="Standard Capacity (Optional)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Mex:MexTextBox x:Name="xStandardCapacityTextBox" Grid.Column="2"
                                Padding="12,8,12,8" Width="260"
                                WaterMark="Enter Standart Capacity"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                HorizontalAlignment="Left"/>
                <!--<Mex:MexButton x:Name="xLoadButton" Grid.Column="4"
                               Padding="24,9,24,9"
                               CornerRadius="8"
                               ImageWidth="20" ImageHeight="20"
                               ImageSetLeft="{StaticResource Mex/ResImageSet_Component/SettingsPrimaryFill}"
                               Text="Load"
                               FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                               TextPadding="12,0,0,0"
                               ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"/>-->
                <Mex:MexButton x:Name="xSaveButton" Grid.Column="6"
                               Padding="24,9,24,9"
                               CornerRadius="8"
                               ImageWidth="20" ImageHeight="20"
                               ImageSetLeft="{StaticResource Mex/ResImageSet_Component_Test/SettingsPrimaryFill_Test}"
                               Text="Save"
                               FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                               TextPadding="12,0,0,0"
                               ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"/>
            </Grid>
            <Image x:Name="xTestImage" Grid.Row="2" Width="200" Height="200" Source="{StaticResource Mex/ResImage/save}"/>
        </Grid>
    </Border>
</UserControl>
