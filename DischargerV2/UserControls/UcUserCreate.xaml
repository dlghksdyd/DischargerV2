<UserControl x:Class="DischargerV2.UserControls.UcUserCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="592" d:DesignWidth="480"
             MinHeight="592" MinWidth="480"
             Background="{StaticResource Mex/ResColor/surface_page}">

    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="8"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Mex:MexTextBlock Text="Create New User"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                              HorizontalAlignment="Left"/>
            <Image x:Name="xCloseImage" 
                   Width="28" Height="28"
                   Source="{StaticResource Mex/ResImage/close_popup}"
                   HorizontalAlignment="Right"
                   Cursor="Hand"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--Permission RadioButton-->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Mex:MexRadioButton x:Name="xUserRadioButton" GroupName="Permission"
                                    Text="User"
                                    TextPadding="12" ButtonSize="24"
                                    Foreground="{StaticResource Mex/ResColor/text_body}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                                    VerticalContentAlignment="Center"
                                    IsChecked="True" />
                <Grid Width="16"/>
                <Mex:MexRadioButton x:Name="xAdminRadioButton" GroupName="Permission"
                                    Text="Admin"
                                    TextPadding="12" ButtonSize="24"
                                    Foreground="{StaticResource Mex/ResColor/text_body}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                                    IsChecked="False" />
            </StackPanel>
            <!--ID-->
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <Mex:MexTextBlock Text="ID"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexTextBox x:Name="xIdTextBox" 
                                Padding="12,8,12,8"
                                CornerRadius="8"
                                WaterMark="Enter ID"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
            <!--Password-->
            <StackPanel Grid.Row="4" Orientation="Vertical">
                <Mex:MexTextBlock Text="Password"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexPasswordBox x:Name="xPasswordBox" 
                                    Padding="12,8,12,8"
                                    CornerRadius="8"
                                    WaterMark="Enter Password"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ImageSetHidePassword="{StaticResource Mex/ResImageSet_Toggle/Visibility}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
            <!--Confirm Password-->
            <StackPanel Grid.Row="6" Orientation="Vertical">
                <Mex:MexTextBlock Text="Confirm Password"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexPasswordBox x:Name="xConfirmPasswordBox" 
                                    Padding="12,8,12,8"
                                    CornerRadius="8"
                                    WaterMark="Re-enter Password"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ImageSetHidePassword="{StaticResource Mex/ResImageSet_Toggle/Visibility}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
            <!--User Name-->
            <StackPanel Grid.Row="8" Orientation="Vertical">
                <Mex:MexTextBlock Text="User Name"
                      Foreground="{StaticResource Mex/ResColor/text_body}"
                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexTextBox x:Name="xUserNameTextBox" 
                                Padding="12,8,12,8"
                                CornerRadius="8"
                                WaterMark="Enter User Name"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
        </Grid>
        <!--Cancel & Create Button-->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal" FlowDirection="RightToLeft">
            <Mex:MexButton x:Name="xCreateButton"
                           Padding="24,10,24,10"
                           CornerRadius="8" 
                           Text="Create"
                           FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"/>
            <Grid Width="12"/>
            <Mex:MexButton x:Name="xCancelButton"
                           Padding="24,10,24,10"
                           CornerRadius="8" 
                           Text="Cancel"
                           FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/Secondary}"/>
        </StackPanel>
    </Grid>
</UserControl>
