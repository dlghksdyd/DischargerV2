<UserControl x:Class="DischargerV2.UserControls.UcModePreset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="448" d:DesignWidth="990" 
             MinHeight="448" MinWidth="990">

    <Border CornerRadius="0,7.5,7.5,0" 
            BorderBrush="{StaticResource Mex/ResColor/border_primary}"
            BorderThickness="1,0,0,0"
            Background="{StaticResource Mex/ResColor/surface_page}">
        <Grid Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <Mex:MexLabel Text="Battery Type" 
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                              ImageWidth="6" ImageHeight="6"
                              ImageLeft="{StaticResource Mex/ResImage/asterisk}"
                              Margin="-6,0,0,0"
                              HorizontalAlignment="Left" VerticalAlignment="Center"
                              VerticalContentAlignment="Top"/>
                <Grid Height="16"/>
                <Mex:MexItemBox Height="192"/>
                
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal">

            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Vertical">

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
