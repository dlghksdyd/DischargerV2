<UserControl x:Class="DischargerV2.UserControls.UcSafetyCondition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="502" 
             MinHeight="280" MinWidth="502">

    <Border CornerRadius="8"
            BorderBrush="{StaticResource Mex/ResColor/border_primary}"
            BorderThickness="1"
            Background="{StaticResource Mex/ResColor/surface_page}">
        <StackPanel Orientation="Vertical" Margin="24">
            <Mex:MexTextBlock Text="Safety Condition"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
            <Grid Height="16"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0" 
                                  Text="Voltage (V)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Mex:MexTextBox x:Name="xVoltMinTextBox"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Mex:MexTextBlock Text="~" 
                                      Margin="8"
                                      Foreground="{StaticResource Mex/ResColor/text_body}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Mex:MexTextBox x:Name="xVoltMaxTextBox"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Grid Height="20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0" 
                                  Text="Current (A)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Mex:MexTextBox x:Name="xCurrMinTextBox"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Mex:MexTextBlock Text="~" 
                                      Margin="8"
                                      Foreground="{StaticResource Mex/ResColor/text_body}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Mex:MexTextBox x:Name="xCurrMaxTextBox"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Grid Height="20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0" 
                                  Text="Temperature (℃)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Mex:MexTextBox x:Name="xTempMinTextBox"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Mex:MexTextBlock Text="~" 
                                      Margin="8"
                                      Foreground="{StaticResource Mex/ResColor/text_body}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Mex:MexTextBox x:Name="xTempMaxTextBox"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
