<UserControl x:Class="DischargerV2.UserControls.UcMonitor_Simple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="208" d:DesignWidth="534"
             MinHeight="208" MinWidth="534">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                BorderThickness="1"
                CornerRadius="8"
                Background="{StaticResource Mex/ResColor/surface_primary}">
            <StackPanel Orientation="Vertical" Margin="12">
                <Mex:MexTextBlock Text="Target Voltage (180.0V)"
                                  Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="8"/>
                <Mex:MexTextBlock x:Name="xDischargeTypeTextBlock"
                                  Text="Complete Discharge"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
            </StackPanel>
        </Border>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="{StaticResource Mex/ResColor/surface_primary}">
                <StackPanel Orientation="Vertical" Margin="12">
                    <Mex:MexTextBlock Text="Standard Capacity"
                                      Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    <Grid Height="8"/>
                    <Mex:MexTextBlock x:Name="xStandardCapacityTextBlock"
                                      Text="96.5A"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="{StaticResource Mex/ResColor/surface_primary}">
                <StackPanel Orientation="Vertical" Margin="12">
                    <Mex:MexTextBlock Text="Standard Voltage"
                                      Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    <Grid Height="8"/>
                    <Mex:MexTextBlock x:Name="xStandardVoltageTextBlock"
                                      Text="256.4V"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
