<UserControl x:Class="DischargerV2.UserControls.UcModeSimple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="440" d:DesignWidth="990"
             Background="{StaticResource Mex/ResColor/surface_page}">

    <Border Margin="32,24,32,24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <Mex:MexTextBlock Text="Step 1"
                                      Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    <Grid Height="8"/>
                    <Mex:MexTextBlock Text="Input Voltage and Capacity"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                </StackPanel>
                <Grid Height="20"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Width="280">
                        <Mex:MexTextBlock Text="Standard Voltage (V)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xStandardVoltTextBox"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter Standard Voltage"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                    <Grid Width="40"/>
                    <StackPanel Orientation="Vertical" Width="280">
                        <Mex:MexTextBlock Text="Standard Capacity (A)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xStandardCapacityTextBox"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter Standard Capacity"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <Mex:MexTextBlock Text="Step 2"
                      Foreground="{StaticResource Mex/ResColor/text_infomation}"
                      FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    <Grid Height="8"/>
                    <Mex:MexTextBlock Text="Select Discharge Type"
                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                </StackPanel>
                <Grid Height="20"/>
                <StackPanel Orientation="Vertical">
                    <Mex:MexRadioButton x:Name="xFullDischargeRadioButton" GroupName="DischargeType"
                                        Text="Full Discharge"
                                        TextPadding="12,0,0,0" ButtonSize="24"
                                        Foreground="{StaticResource Mex/ResColor/text_body}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                                        VerticalContentAlignment="Center"
                                        IsChecked="True"/>
                    <Grid Height="28"/>
                    <Mex:MexRadioButton x:Name="xCompleteDischargeRadioButton" GroupName="DischargeType"
                                        Text="0V Discharge"
                                        TextPadding="12,0,0,0" ButtonSize="24"
                                        Foreground="{StaticResource Mex/ResColor/text_body}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                                        VerticalContentAlignment="Center"
                                        IsChecked="True"/>
                    <Grid Height="20"/>
                    <StackPanel Orientation="Horizontal">
                        <Mex:MexRadioButton x:Name="xTargetVoltDischargeRadioButton" GroupName="DischargeType"
                                            Text="Target Voltage (V)"
                                            TextPadding="12,0,0,0" ButtonSize="24"
                                            Foreground="{StaticResource Mex/ResColor/text_body}"
                                            FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                            ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                                            VerticalContentAlignment="Center"
                                            IsChecked="False"/>
                        <Grid Width="12"/>
                        <Mex:MexTextBox x:Name="xTargetVoltTextBox"
                                        Padding="12,8,12,8" Width="280"
                                        WaterMark="Enter Target Voltage"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
