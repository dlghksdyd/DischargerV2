<UserControl x:Class="DischargerV2.UserControls.UcSetMode_Step"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2"
             xmlns:uc="clr-namespace:DischargerV2.UserControls"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="440" d:DesignWidth="990"
             Background="{StaticResource Mex/ResColor/surface_page}">

    <Border Margin="32,20,32,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0"
                                  Text="Standard Capacity (Optional)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Mex:MexTextBox x:Name="xStandardCapacityTextBox" Grid.Column="2"
                                Padding="12,8,12,8" Width="260"
                                WaterMark="Enter Standart Capacity"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                HorizontalAlignment="Left"/>
                <Mex:MexButton x:Name="xLoadButton" Grid.Column="4"
                               Padding="24,9,24,9"
                               CornerRadius="8"
                               ImageWidth="20" ImageHeight="20"
                               ImageSetLeft="{StaticResource Mex/ResImageSet_Component/LoadButtonPrimary}"
                               Text="Load"
                               FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                               TextPadding="12,0,0,0"
                               ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"/>
                <Mex:MexButton x:Name="xSaveButton" Grid.Column="6"
                               Padding="24,9,24,9"
                               CornerRadius="8"
                               ImageWidth="20" ImageHeight="20"
                               ImageSetLeft="{StaticResource Mex/ResImageSet_Component/SaveButtonPrimary}"
                               Text="Save"
                               FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                               TextPadding="12,0,0,0"
                               ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"/>
            </Grid>
            <Border Grid.Row="2"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="{StaticResource Mex/ResColor/surface_primary}">
                <Mex:MexScrollViewer BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                                     BorderThickness="0,0,1,0">
                    <StackPanel Orientation="Vertical" 
                                Margin="12">
                        <uc:UcSetMode_StepData/>
                        <Grid Height="12"/>
                        <uc:UcSetMode_StepData/>
                        <Grid Height="12"/>
                        <uc:UcSetMode_StepData/>
                        <Grid Height="12"/>
                        <uc:UcSetMode_StepData/>
                        <Grid Height="12"/>
                        <uc:UcSetMode_StepData/>
                        <Grid Height="12"/>
                        <uc:UcSetMode_StepData/>
                    </StackPanel>
                </Mex:MexScrollViewer>
            </Border>
            <Mex:MexButton x:Name="xAddStepButton" Grid.Row="4"
                           Padding="24,9,24,9"
                           BorderThickness="1"
                           CornerRadius="8"
                           ImageWidth="20" ImageHeight="20"
                           ImageSetLeft="{StaticResource Mex/ResImageSet_Component/SettingsButtonOutline}"
                           Text="Add Step"
                           FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                           TextPadding="12,0,0,0"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/PrimaryOutline}"
                           HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</UserControl>
