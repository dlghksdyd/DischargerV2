             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="312" d:DesignWidth="1760"
             MinHeight="312" MinWidth="1760">

    <Border Width="1760" Height="312"
            CornerRadius="8" 
            Background="{StaticResource Mex/ResColor/surface_page}">
        <Mex:MexTable x:Name="xTable"
                      Width="1760" Height="312"
                      CornerRadius="8" 
                      BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                      BorderThickness="1"
                      ColumnCount="9">
            <Mex:MexTable.Header>
                <Mex:MexTableHeader Height="52">
                    <Mex:MexTableHeaderColumn Width="60">
                        <Mex:MexTextBlock Text="No."
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="360">
                        <Mex:MexTextBlock Text="Discharger name"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="140">
                        <Mex:MexTextBlock Text="Channel"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Text="Status"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Text="Voltage (V)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Text="Current (A)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Text="Temperature (℃)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Text="Progress Time"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Text="Info"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                </Mex:MexTableHeader>
            </Mex:MexTable.Header>
            <Mex:MexTable.Rows>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Text="1"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Grid Width="328">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Mex:MexTextBlock Text="Discharger name example" Grid.Column="0"
                                              Foreground="{StaticResource Mex/ResColor/text_body}"
                                              FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                            <Mex:MexLabel Grid.Column="1" Visibility="Hidden" 
                                          CornerRadius="4"
                                          Background="{StaticResource Mex/ResColor/surface_success}"
                                          Padding="8,0,8,0"
                                          Text="Short Available" 
                                          Foreground="{StaticResource Mex/ResColor/text_success}"
                                          TextPadding="4,0,0,0"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          ImageWidth="16" ImageHeight="16"
                                          ImageLeft="{Binding Source={StaticResource Mex/ResImage/electric_bolt},
                                                              Converter={StaticResource ImageColorConverter}, 
                                                              ConverterParameter={StaticResource Mex/ResColor/icon_success}}"
                                          HorizontalAlignment="Right"/>
                        </Grid>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="1"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Grid Width="168">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="12" Height="12"
                                     Fill="{StaticResource Mex/ResColor/icon_success}"/>
                            <Mex:MexTextBlock Text="Connected" Grid.Column="1"
                                              Foreground="{StaticResource Mex/ResColor/text_body}"
                                              FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                              Padding="8,0,0,0"/>
                        </Grid>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="1000.0"
