                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Grid Width="168">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="12" Height="12"
                                     Fill="{StaticResource Mex/ResColor/icon_disabled}"/>
                            <Mex:MexTextBlock Text="Disconnect" Grid.Column="1"
                                              Foreground="{StaticResource Mex/ResColor/text_body}"
                                              FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                              Padding="8,0,0,0"/>
                        </Grid>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="500.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
