<UserControl x:Class="DischargerV2.UserControls.UcMonitor_Step"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="208" d:DesignWidth="534"
             MinHeight="208" MinWidth="534">

    <Border Width="534" Height="208"
            CornerRadius="8" 
            Background="{StaticResource Mex/ResColor/surface_page}">
        <Mex:MexTable x:Name="xTable"
                      Width="534" Height="208"
                      CornerRadius="8" 
                      ColumnCount="4">
            <Mex:MexTable.Header>
                <Mex:MexTableHeader Height="52">
                    <Mex:MexTableHeaderColumn Width="60">
                        <Mex:MexTextBlock Text="No."
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="*">
                        <Mex:MexTextBlock Text="Mode"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="*">
                        <Mex:MexTextBlock Text="Voltage (V)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="*">
                        <Mex:MexTextBlock Text="Current (A)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                </Mex:MexTableHeader>
            </Mex:MexTable.Header>
            <Mex:MexTable.Rows>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Text="1"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="CC"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="1000.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="100.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Text="2"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="CC"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="900.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="90.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Text="3"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="CC"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="800.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="80.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Text="4"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="CC"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="700.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="70.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Text="5"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="CC"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="600.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Text="60.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
            </Mex:MexTable.Rows>
        </Mex:MexTable>
    </Border>
</UserControl>
