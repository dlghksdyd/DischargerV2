<UserControl x:Class="DischargerV2.UserControls.UcMonitor_Preset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             mc:Ignorable="d" 
             d:DesignHeight="152" d:DesignWidth="534"
             MinHeight="152" MinWidth="534">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                BorderThickness="1"
                CornerRadius="8"
                Background="{StaticResource Mex/ResColor/surface_primary}">
            <StackPanel Orientation="Vertical" Margin="12">
                <Mex:MexTextBlock Text="Discharge Type"
                                  Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="8"/>
                <Mex:MexTextBlock x:Name="xDischargeTypeTextBlock"
                                  Text="Complete Discharge"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="2"
                BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                BorderThickness="1"
                CornerRadius="8"
                Background="{StaticResource Mex/ResColor/surface_primary}">
            <StackPanel Orientation="Vertical" Margin="12">
                <Mex:MexTextBlock Text="Battery Type"
                                  Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="8"/>
                <Mex:MexTextBlock x:Name="xBatteryTypeTextBlock"
                                  Text="Ioniq 5 Pack"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
