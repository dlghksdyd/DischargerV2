<UserControl x:Class="DischargerV2.MVVM.Views.ViewModelRegister_Info"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelModelRegister_Info}"
             d:DesignHeight="148" d:DesignWidth="1520"
             MinHeight="148" MinWidth="1520">

    <Border Width="1520" Height="148"
            BorderBrush="{StaticResource Mex/ResColor/border_primary}"
            BorderThickness="1"
            CornerRadius="8"
            Background="{StaticResource Mex/ResColor/surface_page}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="72"/>
                <RowDefinition Height="76"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    CornerRadius="7.5,7.5,0,0"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="0,0,0,1"
                    Background="{StaticResource Mex/ResColor/surface_secondary}">
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--Medel-->
                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Model"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xModelTextBlock"
                                          Text="{Binding Model.DischargerModel, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=MBDC}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                    </StackPanel>
                    <!--Edit-->
                    <Mex:MexButton x:Name="xEditButton" Grid.Column="2"
                                   Width="48" Height="48" Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/EditButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Click">
                                <b:InvokeCommandAction Command="{Binding OpenEditDataCommand}"
                                                       PassEventArgsToCommand="False"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexButton>
                    <!--Delete-->
                    <Mex:MexButton x:Name="xDeleteButton" Grid.Column="4" 
                                   Width="48" Height="48" Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/DeleteButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Click">
                                <b:InvokeCommandAction Command="{Binding OpenPopupDeleteCommand}"
                                                       PassEventArgsToCommand="False"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers></Mex:MexButton>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                </Grid.ColumnDefinitions>
                <!--Type-->
                <Border Grid.Column="0"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="0,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Type"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xTypeTextBlock"
                                          Text="{Binding Model.Type, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=Load}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--Channel-->
                <Border Grid.Column="1"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Channel"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xChannelTextBlock"
                                          Text="{Binding Model.Channel, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=1}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--VoltSpec-->
                <Border Grid.Column="2"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="VoltSpec (V)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xVoltSpecTextBlock"
                                          Text="{Binding Model.VoltSpec, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=1000}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--CurrSpec-->
                <Border Grid.Column="3"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="CurrSpec (A)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xCurrSpecTextBlock"
                                          Text="{Binding Model.CurrSpec, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=100}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--VoltMax-->
                <Border Grid.Column="4"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="VoltMax (V)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xVoltMaxTextBlock"
                                          Text="{Binding Model.VoltMax, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=1000.0}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--VoltMin-->
                <Border Grid.Column="5"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="VoltMin (V)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xVoltMinTextBlock"
                                          Text="{Binding Model.VoltMin, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=0.0}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--CurrMax-->
                <Border Grid.Column="6"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="CurrMax (A)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xCurrMaxTextBlock"
                                          Text="{Binding Model.CurrMax, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=100.0}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--CurrMin-->
                <Border Grid.Column="7"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="CurrMin (A)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xCurrMinTextBlock"
                                          Text="{Binding Model.CurrMin, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=0.0}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--TempMax-->
                <Border Grid.Column="8"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="TempMax (℃)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xTempMaxTextBlock"
                                          Text="{Binding Model.TempMax, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=65.0}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--TempMin-->
                <Border Grid.Column="9"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="TempMin (℃)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xTempMinTextBlock"
                                          Text="{Binding Model.TempMin, 
                                                         Mode=TwoWay, 
                                                         FallbackValue=-15.0}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
