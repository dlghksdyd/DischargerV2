<UserControl x:Class="DischargerV2.MVVM.Views.ViewModelRegister_Add"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:DischargerV2.UserControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelModelRegister_Add}"
             d:DesignHeight="184" d:DesignWidth="1520"
             MinHeight="184" MinWidth="1520">

    <Border Width="1520" Height="184"
            BorderBrush="{StaticResource Mex/ResColor/border_action}"
            BorderThickness="2"
            CornerRadius="8"
            Background="{StaticResource Mex/ResColor/surface_page}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="84"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    CornerRadius="7.5,7.5,0,0"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="0,0,0,1"
                    Background="{StaticResource Mex/ResColor/surface_secondary}">
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--Medel-->
                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Model" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xModelComboBox"
                                         Width="220" Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Text="{Binding Model.DischargerModel, 
                                                        Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                        Mode=TwoWay}"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"
                                         ItemSource="{Binding Model.DischargerModelList, 
                                                              Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                              Mode=TwoWay}"
                                         HorizontalAlignment="Left"/>
                    </StackPanel>
                    <!--Add-->
                    <Mex:MexButton x:Name="xAddButton" Grid.Column="2"
                                   Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/SaveButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Click">
                                <b:InvokeCommandAction Command="{Binding xAddButton_ClickCommand, 
                                                                         Source={x:Static vm:ViewModelModelRegister_Add.Instance}}"
                                                       PassEventArgsToCommand="False"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexButton>
                    <!--Cancel-->
                    <Mex:MexButton x:Name="xDeletxCancelButtoneButton" Grid.Column="4" 
                                   Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/CloseButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Click">
                                <b:InvokeCommandAction Command="{Binding xCancelButton_ClickCommand, 
                                                                         Source={x:Static vm:ViewModelModelRegister_Add.Instance}}"
                                                       PassEventArgsToCommand="False"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexButton>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                    <ColumnDefinition Width="152"/>
                </Grid.ColumnDefinitions>
                <!--Type-->
                <Border Grid.Column="0"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="0,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Type" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xTypeComboBox"
                                         Width="112" Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Text="{Binding Model.Type, 
                                                        Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                        Mode=TwoWay}"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"
                                         ItemSource="{Binding Model.TypeList, 
                                                              Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                              Mode=TwoWay}"/>
                    </StackPanel>
                </Border>
                <!--Channel-->
                <Border Grid.Column="1"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Channel" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xChannelTextBox" TabIndex="0"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Text="{Binding Model.Channel, 
                                                       Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--VoltSpec-->
                <Border Grid.Column="2"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="VoltSpec (V)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xVoltSpecTextBox" TabIndex="1"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Text="{Binding Model.VoltSpec, 
                                                       Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--CurrSpec-->
                <Border Grid.Column="3"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="CurrSpec (A)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xCurrSpecTextBox" TabIndex="2"
                                        Padding="12,8,12,8" 
                                        WaterMark="Enter"
                                        Text="{Binding Model.CurrSpec, 
                                                       Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--VoltMax-->
                <Border Grid.Column="4"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="VoltMax (V)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xColtMaxTextBox" TabIndex="3"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Text="{Binding Model.VoltMax, 
                                                       Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--VoltMin-->
                <Border Grid.Column="5"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="VoltMin (V)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xVoltMinTextBox" TabIndex="4"
                                                Padding="12,8,12,8"
                                                WaterMark="Enter"
                                                Text="{Binding Model.VoltMin, 
                                                               Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                               Mode=TwoWay}"
                                                Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                                FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--CurrMax-->
                <Border Grid.Column="6"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="CurrMax (A)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xCurrMaxTextBox" TabIndex="5"
                                         Padding="12,8,12,8"
                                         WaterMark="Enter"
                                         Text="{Binding Model.CurrMax, 
                                                        Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                        Mode=TwoWay}"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--CurrMin-->
                <Border Grid.Column="7"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="CurrMin (A)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xCurrMinTextBox" TabIndex="6"
                                        Padding="12,8,12,8" 
                                        WaterMark="Enter"
                                        Text="{Binding Model.CurrMin, 
                                                       Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--TempMax-->
                <Border Grid.Column="8"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="TempMax (℃)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xTempMaxTextBox" TabIndex="7"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Text="{Binding Model.TempMax, 
                                                       Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </StackPanel>
                </Border>
                <!--TempMin-->
                <Border Grid.Column="9"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="TempMin (℃)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xTempMinTextBox" TabIndex="8"
                                        Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Text="{Binding Model.TempMin, 
                                                       Source={x:Static vm:ViewModelModelRegister_Add.Instance}, 
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}">
                        </Mex:MexTextBox>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
