<UserControl x:Class="DischargerV2.MVVM.Views.ViewUserSetting_Info"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelUserSetting_Info}"
             d:DesignHeight="144" d:DesignWidth="360"
             MinHeight="144" MinWidth="360">

    <UserControl.Resources>
        <ResourceDictionary>
            <Util:BoolToAdminTextConverter x:Key="BoolToAdminTextConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border CornerRadius="8"
            Background="{StaticResource Mex/ResColor/surface_primary}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="84"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Grid Width="35" Height="35">
                        <Ellipse x:Name="xNameEllipse" 
                                 Width="35" Height="35"
                                 Fill="{StaticResource Mex/ResColor/surface_success}"/>
                        <Mex:MexTextBlock Text="{Binding Model.Initial, 
                                                         FallbackValue=M, TargetNullValue=M}"
                                          Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Width="8"/>
                    <Mex:MexTextBlock x:Name="xIdTextBlock" 
                                      Text="{Binding Model.Id, 
                                                     FallbackValue=mintech, TargetNullValue=mintech}"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                                      VerticalAlignment="Center"/>
                    <Grid Width="8"/>
                    <Mex:MexTextBlock x:Name="xPermissionTextBlock" 
                                      Text="{Binding Model.IsAdmin,
                                                     Converter={StaticResource BoolToAdminTextConverter},
                                                     FallbackValue=Admin, TargetNullValue=Admin}"
                                      Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                      VerticalAlignment="Center"/>
                </StackPanel>
                <Image x:Name="xEditImage" Grid.Column="1"
                       Cursor="Hand"
                       Width="24" Height="24"
                       Source="{Binding Source={StaticResource Mex/ResImage/edit},
                                        Converter={StaticResource ImageColorConverter}, 
                                        ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                       MouseLeftButtonUp="xEditImage_MouseLeftButtonUp"/>
                <Image x:Name="xDeleteImage" Grid.Column="2" 
                       Width="24" Height="24" Margin="8 0 0 0"
                       Cursor="Hand"
                       Source="{Binding Source={StaticResource Mex/ResImage/delete},
                                        Converter={StaticResource ImageColorConverter}, 
                                        ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                       MouseLeftButtonUp="xDeleteImage_MouseLeftButtonUp"/>
            </Grid>
            <Grid Grid.Row="1">
                <Border BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="0,1,0,0"/>
                <StackPanel Orientation="Vertical" 
                            Margin="24,12,24,12"
                            HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Mex:MexTextBlock Text="Name"
                                      Foreground="{StaticResource Mex/ResColor/text_body}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    <Grid Height="4"/>
                    <Mex:MexTextBlock Text="{Binding Model.Name, 
                                                     FallbackValue=민테크, TargetNullValue=민테크}"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_lg_regular}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
