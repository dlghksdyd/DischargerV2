<UserControl x:Class="DischargerV2.MVVM.Views.ViewLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             mc:Ignorable="d" 
             DataContext="{x:Static vm:ViewModelLogin.Instance}"
             d:DesignHeight="1080" d:DesignWidth="1920"
             Visibility="{Binding Model.Visibility}">
    
    <Grid Background="{StaticResource Mex/ResColor/surface_page}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" 
               Source="{StaticResource Mex/ResImage/bg_login}"/>
        <StackPanel Grid.Column="1"
                    Width="555"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="320" Height="65" 
                   Margin="111,0,124,80"
                   Source="{StaticResource Mex/ResImage/mintech_logo}"/>
            <Grid Height="80"/>
            <StackPanel>
                <Mex:MexLabel Text="{Binding Source={StaticResource DynamicString}, Path=[Id]}"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                              HorizontalAlignment="Left"/>
                <Grid Height="4"/>
                <Mex:MexTextBox x:Name="xIdTextBox" TabIndex="0"
                                Padding="12,8,12,8" 
                                CornerRadius="8"
                                WaterMark="{Binding Source={StaticResource DynamicString}, Path=[EnterId]}"
                                Text="{Binding Model.UserId, Mode=TwoWay}"
                                Foreground="{StaticResource Mex/ResColor/text_body}"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}">
                </Mex:MexTextBox>
            </StackPanel>
            <Grid Height="40"/>
            <StackPanel>
                <Mex:MexLabel Text="{Binding Source={StaticResource DynamicString}, Path=[Password]}"
                              Focusable="False"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                              HorizontalAlignment="Left"/>
                <Grid Height="4"/>
                <Mex:MexPasswordBox x:Name="xPasswordBox" TabIndex="1"
                                    Padding="12,8,12,8" 
                                    CornerRadius="8"
                                    WaterMark="{Binding Source={StaticResource DynamicString}, Path=[EnterPassword]}"
                                    Text="{Binding Model.Password, Mode=TwoWay}"
                                    Foreground="{StaticResource Mex/ResColor/text_body}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                    ImageSetHidePassword="{StaticResource Mex/ResImageSet_Toggle/Visibility}"
                                    ImageSizeHidePassword="24"
                                    IsHidePassword="True" 
                                    ColorSet="{x:Static Mex:ResColorSet_TextBox.Primary}" 
                                    KeyDown="xPasswordBox_KeyDown">
                </Mex:MexPasswordBox>
            </StackPanel>
            <Grid Height="40"/>
            <Mex:MexButton x:Name="xLoginButton" Grid.Row="3" TabIndex="2"
                           Padding="24,16,24,16" HorizontalAlignment="Stretch"
                           CornerRadius="8"
                           Text="{Binding Source={StaticResource DynamicString}, Path=[Login]}"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"
                           FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                           IsShadow="True"
                           Click="xLoginButton_Click"/>
            <Grid Height="120"/>
            <Mex:MexLabel Text="v2.0.0"
                          HorizontalContentAlignment="Center"
                          Foreground="{StaticResource Mex/ResColor/text_body}"
                          FontSet="{StaticResource Mex/ResFontSet/body_lg_regular}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="40"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <StackPanel x:Name="xEnglishStackPanel" 
                        Orientation="Vertical" Cursor="Hand"
                        MouseLeftButtonUp="xEnglishStackPanel_MouseLeftButtonUp">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                           x:Name="xLanguageEnglish" 
                           Width="50" Height="50" 
                           Source="/Images/en-US.png"/>
                    <Ellipse Grid.Row="0"
                             Stroke="{StaticResource Mex/ResColor/border_primary}"
                             StrokeThickness="1"/>
                    <Mex:MexTextBlock Grid.Row="1"
                                      Text="English" Padding="0 8 0 0" 
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                </Grid>
            </StackPanel>
            <Grid Width="32"/>
            <StackPanel x:Name="xKoreanStackPanel" 
                        Orientation="Vertical" Cursor="Hand"
                        MouseLeftButtonUp="xKoreanStackPanel_MouseLeftButtonUp">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                           x:Name="xLanguageKorean" 
                           Width="50" Height="50" 
                           Source="/Images/ko-KR.png"/>
                    <Ellipse Grid.Row="0"
                             Stroke="{StaticResource Mex/ResColor/border_primary}"
                             StrokeThickness="1"/>
                    <Mex:MexTextBlock Grid.Row="1"
                                      Text=" 한국어" Padding="0 8 0 0" 
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
