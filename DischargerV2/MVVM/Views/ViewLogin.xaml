<UserControl x:Class="DischargerV2.MVVM.Views.ViewLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress"
             mc:Ignorable="d" 
             DataContext="{StaticResource ViewModelLogin}"
             d:DesignHeight="1080" d:DesignWidth="1920"
             Visibility="{Binding Model.Visibility}">
    
    <Grid Background="{StaticResource Mex/ResColor/surface_page}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" 
               Source="{StaticResource Mex/ResImage/bg_login}"/>
        <StackPanel Grid.Column="1"
                    Width="555"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="320" Height="65" 
                   Margin="111,0,124,80"
                   Source="{StaticResource Mex/ResImage/mintech_logo}"/>
            <Grid Height="80"/>
            <StackPanel>
                <Mex:MexLabel Text="ID"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                              HorizontalAlignment="Left"/>
                <Grid Height="4"/>
                <Mex:MexTextBox x:Name="xIdTextBox" TabIndex="0"
                                Padding="12,8,12,8" 
                                CornerRadius="8"
                                WaterMark="Enter ID"
                                Text="{Binding Model.UserId, Mode=TwoWay}"
                                Foreground="{StaticResource Mex/ResColor/text_body}"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}">
                </Mex:MexTextBox>
            </StackPanel>
            <Grid Height="40"/>
            <StackPanel>
                <Mex:MexLabel Text="Password"
                              Focusable="False"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                              HorizontalAlignment="Left"/>
                <Grid Height="4"/>
                <Mex:MexPasswordBox x:Name="xPasswordBox" TabIndex="1"
                                    Padding="12,8,12,8" 
                                    CornerRadius="8"
                                    WaterMark="Enter Password"
                                    Text="{Binding Model.Password, Mode=TwoWay}"
                                    Foreground="{StaticResource Mex/ResColor/text_body}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                    ImageSetHidePassword="{StaticResource Mex/ResImageSet_Toggle/Visibility}"
                                    ImageSizeHidePassword="24"
                                    IsHidePassword="True" 
                                    ColorSet="{x:Static Mex:ResColorSet_TextBox.Primary}">
                </Mex:MexPasswordBox>
            </StackPanel>
            <Grid Height="40"/>
            <Mex:MexButton x:Name="xLoginButton" Grid.Row="3" TabIndex="2"
                           Padding="24,16,24,16" HorizontalAlignment="Stretch"
                           CornerRadius="8"
                           Text="Log In"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"
                           FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                           IsShadow="True">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding LoginCommand}"
                                               PassEventArgsToCommand="False"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Mex:MexButton>
            <Grid Height="120"/>
            <Mex:MexLabel Text="v2.0.0"
                          HorizontalContentAlignment="Center"
                          Foreground="{StaticResource Mex/ResColor/text_body}"
                          FontSet="{StaticResource Mex/ResFontSet/body_lg_regular}"/>
        </StackPanel>
    </Grid>
</UserControl>
