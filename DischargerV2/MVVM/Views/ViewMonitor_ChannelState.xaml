<UserControl x:Class="DischargerV2.MVVM.Views.ViewMonitor_ChannelState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress"
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:enum="clr-namespace:DischargerV2.MVVM.Enums"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             DataContext="{x:Static vm:ViewModelDischarger.Instance}"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Mex:ImageColorConverter x:Key="ImageColorConverter"/>
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal">
        <Border Padding="12,8,12,8"
                CornerRadius="{StaticResource Mex/ResCornerRadius/radius_lg}" 
                Background="{StaticResource Mex/ResColor/surface_disabled}">
            <StackPanel Orientation="Horizontal">
                <Mex:MexTextBlock Text="All Channel"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_lg_medium}"/>
                <Grid Width="8"/>
                <Mex:MexTextBlock x:Name="xAllTextBlock"
                                  Width="32" Padding="10,0,10,0"
                                  CornerRadius="{StaticResource Mex/ResCornerRadius/radius_mdx2}"
                                  Background="{StaticResource Mex/ResColor/surface_action}"
                                  Text="{Binding AllChannelCount}"
                                  Foreground="{StaticResource Mex/ResColor/text_on_action}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_lg_medium}"/>
            </StackPanel>
        </Border>
        <Grid Width="16"/>
        <Border Padding="12,8,12,8"
                CornerRadius="{StaticResource Mex/ResCornerRadius/radius_lg}" 
                Background="{StaticResource Mex/ResColor/surface_disabled}">
            <StackPanel Orientation="Horizontal">
                <Mex:MexTextBlock Text="Connected Channel"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_lg_medium}"/>
                <Grid Width="8"/>
                <Mex:MexTextBlock x:Name="xConnectedTextBlock"
                                  Width="32" Padding="10,0,10,0"
                                  CornerRadius="{StaticResource Mex/ResCornerRadius/radius_mdx2}" 
                                  Background="{StaticResource Mex/ResColor/surface_action}"
                                  Text="{Binding ConnectedChannelCount}"
                                  Foreground="{StaticResource Mex/ResColor/text_on_action}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_lg_medium}"/>
            </StackPanel>
        </Border>
        <Grid Width="16"/>
        <Border Padding="12,8,12,8"
                CornerRadius="{StaticResource Mex/ResCornerRadius/radius_lg}" 
                Background="{StaticResource Mex/ResColor/surface_error}">
            <StackPanel Orientation="Horizontal">
                <Mex:MexTextBlock Text="Fault Channel"
                                  Foreground="{StaticResource Mex/ResColor/text_error}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_lg_medium}"/>
                <Grid Width="8"/>
                <Mex:MexTextBlock x:Name="xFaultTextBlock"
                                  Width="32" Padding="10,0,10,0"
                                  CornerRadius="{StaticResource Mex/ResCornerRadius/radius_mdx2}" 
                                  Background="{StaticResource Mex/ResColor/icon_error}"
                                  Text="{Binding FaultChannelCount}"
                                  Foreground="{StaticResource Mex/ResColor/text_on_action}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_lg_medium}"/>
            </StackPanel>
        </Border>
        <Grid Width="16"/>
        <Image x:Name="xSoundImage" 
               Width="40" Height="40"
               Source="{Binding Source={StaticResource Mex/ResImage/volume_up}, Converter={StaticResource ImageColorConverter}, ConverterParameter={StaticResource Mex/ResColor/icon_primary}}" 
               MouseLeftButtonUp="xSoundImage_MouseLeftButtonUp" Cursor="Hand"></Image>
    </StackPanel>
</UserControl>
