<UserControl x:Class="DischargerV2.MVVM.Views.ViewMonitor_Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:enum="clr-namespace:DischargerV2.MVVM.Enums"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="448" d:DesignWidth="744"
             MaxHeight="448" MaxWidth="744">

    <UserControl.Resources>
        <ResourceDictionary>
            <Util:RectangleInGraphWidthConverter x:Key="RectangleInGraphWidthConverter"/>
            <Util:RectangleInGraphHeightConverter x:Key="RectangleInGraphHeightConverter"/>
            <Util:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" 
                    Orientation="Horizontal">
            <Border Width="70"
                    BorderBrush="{StaticResource Mex/ResColor/border_success}"
                    BorderThickness="0,0,1,0"
                    Visibility="{Binding Model.IsCheckedVoltage, 
                                         Source={x:Static vm:ViewModelMonitor_Graph.Instance},
                                         Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <Mex:MexTextBlock Text="Voltage (V)" 
                                      Height="28" Margin="-40,0,-40,40"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}" 
                                      RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom">
                        <Mex:MexTextBlock.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="270"/>
                            </TransformGroup>
                        </Mex:MexTextBlock.RenderTransform>
                    </Mex:MexTextBlock>
                    <Grid Width="12"/>
                    <Grid Width="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Mex:MexTextBlock x:Name="xVoltRange_1" Grid.Row="0"
                                          Text="400"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xVoltRange_2" Grid.Row="2"
                                           Text="380"
                                           Foreground="{StaticResource Mex/ResColor/text_body}"
                                           FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                           HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xVoltRange_3" Grid.Row="4"
                                           Text="360"
                                           Foreground="{StaticResource Mex/ResColor/text_body}"
                                           FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                           HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xVoltRange_4" Grid.Row="6"
                                           Text="340"
                                           Foreground="{StaticResource Mex/ResColor/text_body}"
                                           FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                           HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xVoltRange_5" Grid.Row="8"
                                           Text="320"
                                           Foreground="{StaticResource Mex/ResColor/text_body}"
                                           FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                           HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xVoltRange_6" Grid.Row="10"
                                           Text="300"
                                           Foreground="{StaticResource Mex/ResColor/text_body}"
                                           FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                           HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Grid>
                </StackPanel>
            </Border>
            <Border Width="70"
                    BorderBrush="{StaticResource Mex/ResColor/border_warning}"
                    BorderThickness="0,0,1,0"
                    Visibility="{Binding Model.IsCheckedCurrent, 
                                         Source={x:Static vm:ViewModelMonitor_Graph.Instance},
                                         Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <Mex:MexTextBlock Text="Current (A)" 
                                      Height="28" Margin="-40,0,-40,39.5"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}" 
                                      RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom">
                        <Mex:MexTextBlock.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="270"/>
                            </TransformGroup>
                        </Mex:MexTextBlock.RenderTransform>
                    </Mex:MexTextBlock>
                    <Grid Width="12"/>
                    <Grid Width="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Mex:MexTextBlock x:Name="xCurrRange_1" Grid.Row="0"
                              Text="400"
                              Foreground="{StaticResource Mex/ResColor/text_body}"
                              FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                              HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xCurrRange_2" Grid.Row="2"
                               Text="380"
                               Foreground="{StaticResource Mex/ResColor/text_body}"
                               FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                               HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xCurrRange_3" Grid.Row="4"
                               Text="360"
                               Foreground="{StaticResource Mex/ResColor/text_body}"
                               FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                               HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xCurrRange_4" Grid.Row="6"
                                          Text="340"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xCurrRange_5" Grid.Row="8"
                                          Text="320"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xCurrRange_6" Grid.Row="10"
                                          Text="300"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Grid>
                </StackPanel>
            </Border>
            <Border Width="70"
                    BorderBrush="{StaticResource Mex/ResColor/border_infomation}"
                    BorderThickness="0,0,1,0"
                    Visibility="{Binding Model.IsCheckedTemp, 
                                         Source={x:Static vm:ViewModelMonitor_Graph.Instance},
                                         Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <Mex:MexTextBlock Text="Temperatrue (℃)" 
                                      Height="28" Margin="-67.5,0,-67.5,67"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}" 
                                      RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom">
                        <Mex:MexTextBlock.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="270"/>
                            </TransformGroup>
                        </Mex:MexTextBlock.RenderTransform>
                    </Mex:MexTextBlock>
                    <Grid Width="12"/>
                    <Grid Width="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Mex:MexTextBlock x:Name="xTempRange_1" Grid.Row="0"
                                          Text="400"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xTempRange_2" Grid.Row="2"
                                          Text="380"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xTempRange_3" Grid.Row="4"
                                          Text="360"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xTempRange_4" Grid.Row="6"
                                          Text="340"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xTempRange_5" Grid.Row="8"
                                          Text="320"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xTempRange_6" Grid.Row="10"
                                          Text="300"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Grid>
                </StackPanel>
            </Border>
            <Border Width="70"
                    BorderBrush="{StaticResource Mex/ResColor/border_error}"
                    BorderThickness="0,0,1,0"
                    Visibility="{Binding Model.IsCheckedSoc, 
                                         Source={x:Static vm:ViewModelMonitor_Graph.Instance},
                                         Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <Mex:MexTextBlock Text="SoC (%)" 
                                      Height="28" Margin="-24,0,-24,23.5"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}" 
                                      RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom">
                        <Mex:MexTextBlock.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="270"/>
                            </TransformGroup>
                        </Mex:MexTextBlock.RenderTransform>
                    </Mex:MexTextBlock>
                    <Grid Width="12"/>
                    <Grid Width="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Mex:MexTextBlock x:Name="xSocRange_1" Grid.Row="0"
                                          Text="400"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xSocRange_2" Grid.Row="2"
                                          Text="380"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xSocRange_3" Grid.Row="4"
                                          Text="360"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xSocRange_4" Grid.Row="6"
                                          Text="340"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xSocRange_5" Grid.Row="8"
                                          Text="320"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Mex:MexTextBlock x:Name="xSocRange_6" Grid.Row="10"
                                          Text="300"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
        <Border Grid.Column="2" Grid.Row="0"
                BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                BorderThickness="1"
                Background="White">
            <Canvas x:Name="xGraphCanvas" 
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Canvas.Background>
                    <VisualBrush x:Name="xGraphVisualBrush" 
                                 TileMode="Tile" 
                                 Viewport="0,0,0.2,0.2"
                                 ViewportUnits="RelativeToBoundingBox">
                        <VisualBrush.Visual>
                            <Rectangle Width="{Binding ElementName=xGraphCanvas, Converter={StaticResource RectangleInGraphWidthConverter}}" 
                                       Height="{Binding ElementName=xGraphCanvas, Converter={StaticResource RectangleInGraphHeightConverter}}" 
                                       Stroke="{StaticResource Mex/ResColor/border_primary}" 
                                       StrokeThickness="0.5"
                                       StrokeDashArray="1"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Canvas.Background>
            </Canvas>
        </Border>
        <StackPanel Grid.Column="2" Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Mex:MexCheckBox x:Name="xVoltCheckBox"
                             Text="Voltage"
                             Foreground="{StaticResource Mex/ResColor/text_body}"
                             ColorSet="{StaticResource Mex/ResColorSet_CheckBox/Primary}"
                             IsChecked="{Binding Model.IsCheckedVoltage, 
                                                 Mode=TwoWay,
                                                 Source={x:Static vm:ViewModelMonitor_Graph.Instance}}"/>
            <Grid Width="16"/>
            <Mex:MexCheckBox x:Name="xCurrent"
                             Text="Current"
                             Foreground="{StaticResource Mex/ResColor/text_body}"
                             ColorSet="{StaticResource Mex/ResColorSet_CheckBox/Primary}"
                             IsChecked="{Binding Model.IsCheckedCurrent, 
                                                 Mode=TwoWay,
                                                 Source={x:Static vm:ViewModelMonitor_Graph.Instance}}"/>
            <Grid Width="16"/>
            <Mex:MexCheckBox x:Name="xTempCheckBox"
                             Text="Temp."
                             Foreground="{StaticResource Mex/ResColor/text_body}"
                             ColorSet="{StaticResource Mex/ResColorSet_CheckBox/Primary}"
                             IsChecked="{Binding Model.IsCheckedTemp, 
                                                 Mode=TwoWay,
                                                 Source={x:Static vm:ViewModelMonitor_Graph.Instance}}"/>
            <Grid Width="16"/>
            <Mex:MexCheckBox x:Name="xSocCheckBox"
                             Text="SoC"
                             Foreground="{StaticResource Mex/ResColor/text_body}"
                             ColorSet="{StaticResource Mex/ResColorSet_CheckBox/Primary}"
                             IsChecked="{Binding Model.IsCheckedSoc, 
                                                 Mode=TwoWay,
                                                 Source={x:Static vm:ViewModelMonitor_Graph.Instance}}"/>
        </StackPanel>
    </Grid>
</UserControl>
