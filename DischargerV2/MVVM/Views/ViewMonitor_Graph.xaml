<UserControl x:Class="DischargerV2.MVVM.Views.ViewMonitor_Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:enum="clr-namespace:DischargerV2.MVVM.Enums"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="448" d:DesignWidth="744"
             MaxHeight="448" MaxWidth="744">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScottPlot:WpfPlot x:Name="xDataGraph" Grid.Row="0"/>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Mex:MexCheckBox x:Name="xVoltCheckBox"
                             Text="Voltage"
                             Foreground="{StaticResource Mex/ResColor/text_body}"
                             FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                             ColorSet="{StaticResource Mex/ResColorSet_CheckBox/Primary}"
                             IsChecked="{Binding IsCheckedVoltage, 
                                                 Mode=TwoWay,
                                                 Source={x:Static vm:ViewModelMonitor_Graph.Instance}}" 
                             MouseLeftButtonUp="xCheckBox_MouseLeftButtonUp"/>
            <Grid Width="16"/>
            <Mex:MexCheckBox x:Name="xCurrent"
                             Text="Current"
                             Foreground="{StaticResource Mex/ResColor/text_body}"
                             FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                             ColorSet="{StaticResource Mex/ResColorSet_CheckBox/Primary}"
                             IsChecked="{Binding IsCheckedCurrent, 
                                                 Mode=TwoWay,
                                                 Source={x:Static vm:ViewModelMonitor_Graph.Instance}}"
                             MouseLeftButtonUp="xCheckBox_MouseLeftButtonUp"/>
            <Grid Width="16"/>
            <Mex:MexCheckBox x:Name="xTempCheckBox"
                             Text="Temp."
                             Foreground="{StaticResource Mex/ResColor/text_body}"
                             FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                             ColorSet="{StaticResource Mex/ResColorSet_CheckBox/Primary}"
                             IsChecked="{Binding IsCheckedTemp, 
                                                 Mode=TwoWay,
                                                 Source={x:Static vm:ViewModelMonitor_Graph.Instance}}"
                             MouseLeftButtonUp="xCheckBox_MouseLeftButtonUp"/>
            <Grid Width="16"/>
            <Mex:MexCheckBox x:Name="xSocCheckBox"
                             Text="SoC"
                             Foreground="{StaticResource Mex/ResColor/text_body}"
                             FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                             ColorSet="{StaticResource Mex/ResColorSet_CheckBox/Primary}"
                             IsChecked="{Binding IsCheckedSoc, 
                                                 Mode=TwoWay,
                                                 Source={x:Static vm:ViewModelMonitor_Graph.Instance}}"
                             Visibility="{Binding VisibilitySoc, 
                                                  Source={x:Static vm:ViewModelMonitor_Graph.Instance}}"
                             MouseLeftButtonUp="xCheckBox_MouseLeftButtonUp"/>
        </StackPanel>
    </Grid>
</UserControl>
