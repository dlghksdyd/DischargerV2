<UserControl x:Class="DischargerV2.MVVM.Views.ViewTopmenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="1920">

    <Border Background="{StaticResource Mex/ResColor/surface_primary}"
            Padding="40,20,40,20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="197"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" 
                   Width="197" Height="40" 
                   Source="{StaticResource Mex/ResImage/mintech_logo}"/>
            <Mex:MexTextBlock x:Name="xDateTimeTextBlock" Grid.Column="2" 
                              Text="2024-11-01 15:32:34"
                              Padding="8"
                              Foreground="{StaticResource Mex/ResColor/text_body}"
                              FontSet="{StaticResource Mex/ResFontSet/body_lg_medium}"
                              HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Mex:MexButton x:Name="xSettingButton" Grid.Column="4" 
                           Padding="24,9,24,9"
                           CornerRadius="4"
                           Text="Settings"
                           TextPadding="12,0,0,0"
                           Foreground="{StaticResource Mex/ResColor/text_on_action}"
                           FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                           ImageWidth="20" ImageHeight="20"
                           ImageSetLeft="{StaticResource Mex/ResImageSet_Component/SettingsButtonTertiary}"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/Tertiary}"
                           HorizontalAlignment="Right" VerticalAlignment="Center">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding OpenPopupSettingCommand}"
                                               PassEventArgsToCommand="False"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Mex:MexButton>
            <Popup x:Name="xPopupSetting"
                   Width="Auto" Height="Auto"
                   IsOpen="{Binding IsPopupOpen}"
                   StaysOpen="{Binding IsPopupStaysOpen}"
                   PlacementTarget="{Binding ElementName=xSettingButton}"
                   Placement="Bottom"
                   HorizontalOffset="-110" VerticalOffset="4"
                   AllowsTransparency="True">
                <view:ViewPopup_Setting/>
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseEnter">
                        <b:InvokeCommandAction Command="{Binding SetPopupStaysOpenCommand}"
                                               PassEventArgsToCommand="False"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Popup>
        </Grid>
    </Border>
</UserControl>
