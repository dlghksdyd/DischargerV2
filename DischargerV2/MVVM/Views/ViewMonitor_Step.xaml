<UserControl x:Class="DischargerV2.MVVM.Views.ViewMonitor_Step"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:enum="clr-namespace:DischargerV2.MVVM.Enums"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="208" d:DesignWidth="534"
             MinHeight="208" MinWidth="534">

    <Border Width="534" Height="208"
            CornerRadius="8" 
            Background="{StaticResource Mex/ResColor/surface_page}">
        <Mex:MexTable x:Name="xTable"
                      Width="534" Height="208"
                      CornerRadius="8" 
                      ColumnCount="4">
            <Mex:MexTable.Header>
                <Mex:MexTableHeader Height="52">
                    <Mex:MexTableHeaderColumn Width="60">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="No."
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="*">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Mode"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="*">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Voltage (V)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="*">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Current (A)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                </Mex:MexTableHeader>
            </Mex:MexTable.Header>
            <Mex:MexTable.Rows>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="1"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="CC"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="1000.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="100.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="2"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="CC"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="900.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="90.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="3"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="CC"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="800.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="80.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
                <Mex:MexTableRow Height="52">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="4"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="CC"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="700.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="70.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
            </Mex:MexTable.Rows>
        </Mex:MexTable>
    </Border>
</UserControl>
