<UserControl x:Class="DischargerV2.MVVM.Views.ViewPopup_UserSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:ViewModelPopup_UserSetting}"
             d:DesignHeight="660" d:DesignWidth="872"
             MaxHeight="660" MaxWidth="872">
    
    <Border Background="{StaticResource Mex/ResColor/surface_primary}"
            CornerRadius="8">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Mex:MexTextBlock Text="{Binding Source={StaticResource DynamicString}, Path=[UserSetting]}"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                <Image x:Name="xCloseImage" 
                       Width="28" Height="28"
                       Source="{Binding Source={StaticResource Mex/ResImage/close},
                                        Converter={StaticResource ImageColorConverter}, 
                                        ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                       HorizontalAlignment="Right"
                       Cursor="Hand">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseLeftButtonUp">
                            <b:InvokeCommandAction Command="{Binding CloseCommand}"
                                                   PassEventArgsToCommand="False"/>
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </Image>
            </Grid>
            <Grid Grid.Row="2" Margin="8,0,8,8">
                <Border CornerRadius="8"
                        Background="{StaticResource Mex/ResColor/surface_page}">
                    <Mex:MexScrollViewer>
                        <WrapPanel x:Name="xContentPanel" Orientation="Horizontal" Width="780"/>
                    </Mex:MexScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
