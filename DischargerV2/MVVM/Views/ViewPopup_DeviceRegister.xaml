<UserControl x:Class="DischargerV2.MVVM.Views.ViewPopup_DeviceRegister"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:ViewModelPopup_DeviceRegister}"
             d:DesignHeight="976" d:DesignWidth="1631"
             MinHeight="976" MinWidth="1631"
             MaxHeight="976" MaxWidth="1631">

    <Border Background="{StaticResource Mex/ResColor/surface_page}"
            CornerRadius="8">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Mex:MexTextBlock Text="Device Register"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                <Image x:Name="xCloseImage" 
                       Width="28" Height="28"
                       Source="{Binding Source={StaticResource Mex/ResImage/close},
                                        Converter={StaticResource ImageColorConverter}, 
                                        ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                       HorizontalAlignment="Right" Cursor="Hand"
                       MouseLeftButtonUp="xCloseImage_MouseLeftButtonUp"/>
            </Grid>
            <Grid Grid.Row="2">
                <Mex:MexButton x:Name="xAddButton"
                               Padding="24,9,24,9"
                               BorderThickness="1"
                               CornerRadius="8"
                               ImageWidth="20" ImageHeight="20"
                               ImageSetLeft="{StaticResource Mex/ResImageSet_Component/AddDeviceButtonOutline}"
                               Text="New Device"
                               TextPadding="12,0,0,0"
                               FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                               ColorSet="{StaticResource Mex/ResColorSet_Button/PrimaryOutline}"
                               HorizontalAlignment="Right"
                               Click="xAddButton_Click"/>
            </Grid>
            <Grid Grid.Row="4">
                <Border BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Background="{StaticResource Mex/ResColor/surface_primary}">
                    <Mex:MexScrollViewer x:Name="xScrollViewer">
                        <Grid>
                            <!--NoData-->
                            <Border x:Name="xNoDataBorder" 
                                    Width="1533" Height="811">
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Width="60" Height="81"
                                           Source="{StaticResource Mex/ResImage/Inbox}"/>
                                    <Grid Height="7"/>
                                    <Mex:MexTextBlock Text="No Data"
                                                      Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                                </StackPanel>
                            </Border>
                            <!--GetData-->
                            <StackPanel x:Name="xContentPanel" 
                                        Orientation="Vertical" Margin="20"/>
                        </Grid>
                        
                    </Mex:MexScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
