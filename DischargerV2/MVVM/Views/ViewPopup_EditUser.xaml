<UserControl x:Class="DischargerV2.MVVM.Views.ViewPopup_EditUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:DischargerV2.UserControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelPopup_EditUser}"
             d:DesignHeight="636" d:DesignWidth="480"
             MinHeight="636" MinWidth="480"
             Background="{StaticResource Mex/ResColor/surface_page}">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="8"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Mex:MexTextBlock Text="User Setting"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                              HorizontalAlignment="Left"/>
            <Image x:Name="xCloseImage" 
                   Width="28" Height="28"
                   Source="{Binding Source={StaticResource Mex/ResImage/close},
                                    Converter={StaticResource ImageColorConverter}, 
                                    ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                   HorizontalAlignment="Right"
                   Cursor="Hand">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseLeftButtonUp">
                        <b:InvokeCommandAction Command="{Binding CloseCommand}"
                                               PassEventArgsToCommand="False"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Image>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--ID-->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <Mex:MexTextBlock Text="ID" IsTabStop="False"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexTextBox x:Name="xIdTextBox" IsTabStop="False"
                                Padding="12,8,12,8"
                                CornerRadius="8"
                                Text="{Binding Model.Id, Mode=TwoWay,
                                               FallbackValue=ID, TargetNullValue=ID}"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                IsReadOnly="True"/>
            </StackPanel>
            <!--Current Password-->
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <Mex:MexTextBlock Text="Current Password" IsTabStop="False"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexPasswordBox x:Name="xCurrentPasswordBox" TabIndex="0"
                                    Padding="12,8,12,8"
                                    CornerRadius="8"
                                    WaterMark="Enter Current Password"
                                    Text="{Binding Model.CurrentPassword, Mode=TwoWay}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ImageSetHidePassword="{StaticResource Mex/ResImageSet_Toggle/Visibility}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
            <!--New Password-->
            <StackPanel Grid.Row="4" Orientation="Vertical">
                <Mex:MexTextBlock Text="New Password" IsTabStop="False"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexPasswordBox x:Name="xNewPasswordBox" TabIndex="1"
                                    Padding="12,8,12,8"
                                    CornerRadius="8"
                                    WaterMark="Enter New Password"
                                    Text="{Binding Model.NewPassword, Mode=TwoWay}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ImageSetHidePassword="{StaticResource Mex/ResImageSet_Toggle/Visibility}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
            <!--Confirm New Password-->
            <StackPanel Grid.Row="6" Orientation="Vertical">
                <Mex:MexTextBlock Text="Confirm New Password" IsTabStop="False"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexPasswordBox x:Name="xConfirmNewPasswordBox" TabIndex="2"
                                    Padding="12,8,12,8"
                                    CornerRadius="8"
                                    WaterMark="Re-enter New Password"
                                    Text="{Binding Model.ConfirmNewPassword, Mode=TwoWay}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ImageSetHidePassword="{StaticResource Mex/ResImageSet_Toggle/Visibility}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
            <!--User Name-->
            <StackPanel Grid.Row="8" Orientation="Vertical">
                <Mex:MexTextBlock Text="User Name" IsTabStop="False"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="4"/>
                <Mex:MexTextBox x:Name="xUserNameTextBox" TabIndex="3" 
                                Padding="12,8,12,8"
                                CornerRadius="8"
                                Text="{Binding Model.Name, Mode=TwoWay, 
                                               FallbackValue=UserName, TargetNullValue=UserName}"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
            </StackPanel>
        </Grid>
        <!--Cancel & Create Button-->
        <StackPanel Grid.Row="4"
                Orientation="Horizontal" FlowDirection="RightToLeft">
            <Mex:MexButton x:Name="xEditButton"
                           CornerRadius="8" 
                           Padding="24,10,24,10"
                           Text="Edit"
                           FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding UpdateEditDataCommand}"
                                               PassEventArgsToCommand="False"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Mex:MexButton>
            <Grid Width="12"/>
            <Mex:MexButton x:Name="xCancelButton"
                           CornerRadius="8" 
                           Padding="24,10,24,10"
                           Text="Cancel"
                           FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/Secondary}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding CloseCommand}"
                                               PassEventArgsToCommand="False"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Mex:MexButton>
        </StackPanel>
    </Grid>
</UserControl>
