<UserControl x:Class="DischargerV2.MVVM.Views.ViewDischargerInfoTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1920">
    <Grid Background="White">
        <Mex:MexTable x:Name="xTable"
                      Width="1760" Height="315"
                      CornerRadius="8" 
                      BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                      BorderThickness="1"
                      ColumnCount="10">
            <Mex:MexTable.Header>
                <Mex:MexTableHeader Height="45" FontSet="{StaticResource Mex/ResFontSet/body_md_medium}">
                    <Mex:MexTableHeaderColumn Width="60">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="No."
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="227">
                        <Mex:MexTextBlock Margin="16,0,6,0" 
                                          Text="Discharger name"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="133"/>
                    <Mex:MexTableHeaderColumn Width="140">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Channel"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Status"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Voltage (V)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Current (A)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Temperature (℃)"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Progress Time"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                    <Mex:MexTableHeaderColumn Width="200">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Info"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </Mex:MexTableHeaderColumn>
                </Mex:MexTableHeader>
            </Mex:MexTable.Header>
            <Mex:MexTable.Rows>
                <Mex:MexTableRow Height="45">
                    <Mex:MexTableRowColumn HorizontalContentAlignment="Center">
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="1"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="Name" 
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexLabel Visibility="Hidden" 
                                      Margin="-8,0,16,0"
                                      CornerRadius="4"
                                      Background="{StaticResource Mex/ResColor/surface_success}"
                                      Padding="8,0,8,0"
                                      Text="Short Available" 
                                      Foreground="{StaticResource Mex/ResColor/text_success}"
                                      TextPadding="4,0,0,0"
                                      FontSet="{StaticResource Mex/ResFontSet/body_xs_regular}"
                                      ImageWidth="16" ImageHeight="16"
                                      ImageLeft="{Binding Source={StaticResource Mex/ResImage/electric_bolt},
                                                          Converter={StaticResource ImageColorConverter}, 
                                                          ConverterParameter={StaticResource Mex/ResColor/icon_success}}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0" 
                                          Text="1"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Grid Width="168" Margin="16,0,16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="12" Height="12"
                                     Fill="{StaticResource Mex/ResColor/icon_success}"/>
                            <Mex:MexTextBlock Text="Connected" Grid.Column="1"
                                              Foreground="{StaticResource Mex/ResColor/text_body}"
                                              FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                              Padding="8,0,0,0"/>
                        </Grid>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock DataContext="{x:Static vm:ViewModelDischarger.Instance}"
                                          Margin="16,0,16,0"
                                          Text="{Binding Model.DischargerDatas[0].ReceiveBatteryVoltage}"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0"
                                          Text="100.0"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0"
                                          Text="28.5"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                    <Mex:MexTableRowColumn>
                        <Mex:MexTextBlock Margin="16,0,16,0"
                                          Text="00:00:00"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    </Mex:MexTableRowColumn>
                </Mex:MexTableRow>
            </Mex:MexTable.Rows>
        </Mex:MexTable>
    </Grid>
</UserControl>
