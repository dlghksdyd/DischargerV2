<UserControl x:Class="DischargerV2.MVVM.Views.ViewPopup_Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelPopup_Setting}"
             d:DesignHeight="300" d:DesignWidth="248"
             MinHeight=" 300" MinWidth="248">

    <Border CornerRadius="8" 
            BorderBrush="{StaticResource Mex/ResColor/border_primary}"
            BorderThickness="1"
            Background="{StaticResource Mex/ResColor/surface_primary}" Margin="4">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Opacity="0.25" BlurRadius="8"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="0,0,0,1"/>
                <StackPanel Orientation="Horizontal" Margin="20,28,20,28">
                    <Grid Width="35" Height="36">
                        <Ellipse x:Name="xNameEllipse" 
                                 Fill="{StaticResource Mex/ResColor/surface_success}"/>
                        <Mex:MexTextBlock x:Name="xInitialNameTextBlock"
                                          Text="M"
                                          Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Width="8"/>
                    <Mex:MexTextBlock x:Name="xIdTextBlock" 
                                      Text="mintech"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                                      VerticalAlignment="Bottom"/>
                    <Grid Width="8"/>
                    <Mex:MexTextBlock x:Name="xPermissionTextBlock" 
                                      Text="Admin"
                                      Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                      VerticalAlignment="Bottom"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <Mex:MexLabel x:Name="xUserSettingLabel"
                                  Padding="20,12,20,12"
                                  Text="User Setting"
                                  TextPadding="12,0,0,0"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                  Background="{Binding Model.Background_UserSetting}"
                                  ImageWidth="24" ImageHeight="24"
                                  ImageLeft="{Binding Source={StaticResource Mex/ResImage/person},
                                                      Converter={StaticResource ImageColorConverter}, 
                                                      ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                  HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                                  Cursor="Hand">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="MouseLeftButtonUp">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseLeftButtonUpCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="MouseEnter">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseEnterCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="MouseLeave">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseLeaveCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexLabel>
                    <Mex:MexLabel x:Name="xDeviceRegisterLabel"
                                  Padding="20,12,20,12"
                                  Text="Device Register"
                                  TextPadding="12,0,0,0"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                  Background="{Binding Model.Background_DeviceRegister}"
                                  ImageWidth="24" ImageHeight="24"
                                  ImageLeft="{Binding Source={StaticResource Mex/ResImage/storage},
                                                      Converter={StaticResource ImageColorConverter}, 
                                                      ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                  HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                                  Cursor="Hand">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="MouseLeftButtonUp">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseLeftButtonUpCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="MouseEnter">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseEnterCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="MouseLeave">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseLeaveCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexLabel>
                    <Mex:MexLabel x:Name="xModelRegisterLabel"
                                  Padding="20,12,20,12"
                                  Text="Model Register"
                                  TextPadding="12,0,0,0"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                  Background="{Binding Model.Background_DbConfiguration}"
                                  ImageWidth="24" ImageHeight="24"
                                  ImageLeft="{Binding Source={StaticResource Mex/ResImage/settings},
                                                      Converter={StaticResource ImageColorConverter}, 
                                                      ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                  HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                                  Cursor="Hand">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="MouseLeftButtonUp">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseLeftButtonUpCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="MouseEnter">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseEnterCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="MouseLeave">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseLeaveCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexLabel>
                    <Mex:MexLabel x:Name="xLogoutLabel"
                                  Padding="20,12,20,12"
                                  Text="Log-out"
                                  TextPadding="12,0,0,0"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                  Background="{Binding Model.Background_Logout}"
                                  ImageWidth="24" ImageHeight="24"
                                  ImageLeft="{Binding Source={StaticResource Mex/ResImage/logout},
                                                      Converter={StaticResource ImageColorConverter}, 
                                                      ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                  HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                                  Cursor="Hand">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="MouseLeftButtonUp">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseLeftButtonUpCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="MouseEnter">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseEnterCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="MouseLeave">
                                <b:InvokeCommandAction Command="{Binding xLabel_MouseLeaveCommand}"
                                                       PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexLabel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
    
</UserControl>
