<UserControl x:Class="DischargerV2.MVVM.Views.ViewDeviceRegister_Edit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:DischargerV2.UserControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelDeviceRegister_Edit}"
             d:DesignHeight="208" d:DesignWidth="1520"
             MinHeight="208" MinWidth="1520">

    <Border Width="1520" Height="208"
            BorderBrush="{StaticResource Mex/ResColor/border_action}"
            BorderThickness="2"
            CornerRadius="8"
            Background="{StaticResource Mex/ResColor/surface_page}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="84"></RowDefinition>
                <RowDefinition Height="32"></RowDefinition>
                <RowDefinition Height="92"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="0,0,0,1">
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="8"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--Device Name-->
                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Name" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xDeciveNameTextBox" TabIndex="0"
                                        Padding="12,8,12,8"
                                        CornerRadius="8"
                                        BorderThickness="1"
                                        WaterMark="Enter Name"
                                        Text="{Binding Model.Name, 
                                                       Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_body}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                        IsReadOnly="True"/>
                    </StackPanel>
                    <!--IP Address-->
                    <StackPanel Grid.Column="2" 
                                Orientation="Vertical"
                                VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="IP" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xIpAddressTextBox" TabIndex="1"
                                        Padding="12,8,12,8"
                                        CornerRadius="8"
                                        BorderThickness="1"
                                        WaterMark="Enter IP"
                                        Text="{Binding Model.Ip, 
                                                       Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_body}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                    <!--Edit-->
                    <Mex:MexButton x:Name="xEditButton" Grid.Column="4"
                                   Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/CheckButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Click">
                                <b:InvokeCommandAction Command="{Binding UpdateEditDataCommand, 
                                                                         Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}}"
                                                       PassEventArgsToCommand="False"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexButton>
                    <!--Cancel-->
                    <Mex:MexButton x:Name="xCancelButton" Grid.Column="6" 
                                   Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/CloseButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Click">
                                <b:InvokeCommandAction Command="{Binding CloseCommand, 
                                                                         Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}}"
                                                       PassEventArgsToCommand="False"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexButton>
                </Grid>
            </Border>
            <Grid Grid.Row="1"
              Background="{StaticResource Mex/ResColor/surface_secondary}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="951"></ColumnDefinition>
                    <ColumnDefinition Width="569"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0" IsTabStop="False"
                                  Text="Discharger"
                                  BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                                  BorderThickness="0,0,1,0"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Mex:MexTextBlock Grid.Column="1" IsTabStop="False"
                                  Text="Temperature Module"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                    <ColumnDefinition Width="190"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--Model-->
                <Border Grid.Column="0"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Model" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xModelComboBox" 
                                         Width="150" Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Text="{Binding Model.DischargerModel, 
                                                        Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}, 
                                                        Mode=TwoWay}"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"
                                         ItemSource="{Binding Model.DischargerModelList, 
                                                              Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}, 
                                                              Mode=TwoWay}">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="MouseLeave">
                                    <b:InvokeCommandAction Command="{Binding LoadModelInfoListCommand, 
                                                                             Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}}"
                                                           PassEventArgsToCommand="False"/>
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Mex:MexComboBox>
                    </StackPanel>
                </Border>
                <!--Type-->
                <Border Grid.Column="1"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Type" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xTypeComboBox" 
                                         Width="150" Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Text="{Binding Model.Type, 
                                                        Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                        Mode=TwoWay}"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"
                                         ItemSource="{Binding Model.TypeList, 
                                                              Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                              Mode=TwoWay}">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="MouseLeave">
                                    <b:InvokeCommandAction Command="{Binding LoadModelInfoListCommand, 
                                                                             Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}}"
                                                           PassEventArgsToCommand="False"/>
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Mex:MexComboBox>
                    </StackPanel>
                </Border>
                <!--Channel-->
                <Border Grid.Column="2"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Channel" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xChannelComboBox" 
                                         Width="150" Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Text="{Binding Model.Channel, 
                                                        Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}, 
                                                        Mode=TwoWay}"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"
                                         ItemSource="{Binding Model.ChannelList, 
                                                              Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                              Mode=TwoWay}">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="MouseLeave">
                                    <b:InvokeCommandAction Command="{Binding LoadModelInfoListCommand, 
                                                                             Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}}"
                                                           PassEventArgsToCommand="False"/>
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Mex:MexComboBox>
                    </StackPanel>
                </Border>
                <!--VoltSpec-->
                <Border Grid.Column="3"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="VoltSpec(V)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xVoltSpecComboBox" 
                                         Width="150" Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Text="{Binding Model.VoltSpec, 
                                                        Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}, 
                                                        Mode=TwoWay}"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"
                                         ItemSource="{Binding Model.VoltSpecList, 
                                                              Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                              Mode=TwoWay}">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="MouseLeave">
                                    <b:InvokeCommandAction Command="{Binding LoadModelInfoListCommand, 
                                                                             Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}}"
                                                           PassEventArgsToCommand="False"/>
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Mex:MexComboBox>
                    </StackPanel>
                </Border>
                <!--CurrSpec-->
                <Border Grid.Column="4"
                          BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                          BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="CurrSpec(A)" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexComboBox x:Name="xCurrSpecComboBox" 
                                         Width="150" Padding="12,8,12,8"
                                         WaterMark="Select"
                                         Text="{Binding Model.CurrSpec, 
                                                        Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}, 
                                                        Mode=TwoWay}"
                                         Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                         FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                         ImageSetDropDown="{StaticResource Mex/ResImageSet_Toggle/DropdownOpen}"
                                         ColorSet="{StaticResource Mex/ResColorSet_ComboBox/Primary}"
                                         ItemSource="{Binding Model.CurrSpecList, 
                                                              Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                              Mode=TwoWay}">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="MouseLeave">
                                    <b:InvokeCommandAction Command="{Binding LoadModelInfoListCommand, 
                                                                             Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance}}"
                                                           PassEventArgsToCommand="False"/>
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Mex:MexComboBox>
                    </StackPanel>
                </Border>
                <!--Comport-->
                <Border Grid.Column="5"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Comport" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xComportTextBox" TabIndex="2"
                                        Width="150" Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Text="{Binding Model.Comport, 
                                                       Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--ModuleChannel-->
                <Border Grid.Column="6"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="ModuleChannel" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xModuleChannelTextBox" TabIndex="3"
                                        Width="150" Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Text="{Binding Model.ModuleChannel, 
                                                       Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
                <!--TempChannel-->
                <Border Grid.Column="7"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="TempChannel" IsTabStop="False"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBox x:Name="xTempChannelTextBox" TabIndex="4"
                                        Width="150" Padding="12,8,12,8"
                                        WaterMark="Enter"
                                        Text="{Binding Model.TempChannel, 
                                                       Source={x:Static vm:ViewModelDeviceRegister_Edit.Instance},
                                                       Mode=TwoWay}"
                                        Foreground="{StaticResource Mex/ResColor/text_placeholder}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
