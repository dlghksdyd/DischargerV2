<UserControl x:Class="DischargerV2.MVVM.Views.ViewDeviceRegister_Info"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:DischargerV2.UserControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelDeviceRegister_Info}"
             d:DesignHeight="180" d:DesignWidth="1520"
             MinHeight="180" MinWidth="1520">

    <Border Width="1520" Height="180"
            BorderBrush="{StaticResource Mex/ResColor/border_primary}"
            BorderThickness="1"
            CornerRadius="8"
            Background="{StaticResource Mex/ResColor/surface_page}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="72"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="76"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="0,0,0,1">
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--Device Name-->
                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Name"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xDeviceNameTextBlock"
                                          Text="{Binding Model.Name, 
                                                         FallbackValue=TEST_DEVICE}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                    </StackPanel>
                    <!--IP Address-->
                    <StackPanel Grid.Column="2" 
                                Orientation="Vertical"
                                VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="IP"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xIpAddressTextBlock"
                                          Text="{Binding Model.Ip, 
                                                         FallbackValue=192.168.0.5}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                    </StackPanel>
                    <!--Edit-->
                    <Mex:MexButton x:Name="xEditButton" Grid.Column="4"
                                   Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/EditButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}"/>
                    <!--Delete-->
                    <Mex:MexButton x:Name="xDeleteButton" Grid.Column="6" 
                                   Padding="12"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   ImageWidth="24" ImageHeight="24"
                                   ImageSetLeft="{StaticResource Mex/ResImageSet_Component/DeleteButtonIcon}"
                                   ColorSet="{StaticResource Mex/ResColorSet_Button/IconOutline}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Click">
                                <b:InvokeCommandAction Command="{Binding xDeleteButton_ClickCommand}"
                                                       PassEventArgsToCommand="False"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Mex:MexButton>
                </Grid>
            </Border>
            <Grid Grid.Row="1"
                  Background="{StaticResource Mex/ResColor/surface_secondary}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="951"/>
                    <ColumnDefinition Width="569"/>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0" 
                                  Text="Discharger"
                                  BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                                  BorderThickness="0,0,1,0"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Mex:MexTextBlock Grid.Column="1" 
                                  Text="Temperature Module"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="190"/>
                    <ColumnDefinition Width="190"/>
                    <ColumnDefinition Width="190"/>
                    <ColumnDefinition Width="190"/>
                    <ColumnDefinition Width="190"/>
                    <ColumnDefinition Width="190"/>
                    <ColumnDefinition Width="190"/>
                    <ColumnDefinition Width="190"/>
                </Grid.ColumnDefinitions>
                <!--Model-->
                <Border Grid.Column="0"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Model"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xModelTextBlock"
                                          Text="{Binding Model.EModel, 
                                                         FallbackValue=MBDC}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--Type-->
                <Border Grid.Column="1"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Type"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xTypeTextBlock"
                                          Text="{Binding Model.EType, 
                                                         FallbackValue=Load}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--Channel-->
                <Border Grid.Column="2"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Channel"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xChannelTextBlock"
                                          Text="{Binding Model.Channel, 
                                                         FallbackValue=1}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--VoltSpec-->
                <Border Grid.Column="3"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="VoltSpec(V)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xVoltSpecTextBlock"
                                          Text="{Binding Model.VoltSpec, 
                                                         FallbackValue=1000}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--CurrentSpec-->
                <Border Grid.Column="4"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="CurrSpec(A)"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xCurrSpecTextBlock"
                                          Text="{Binding Model.CurrSpec, 
                                                         FallbackValue=100}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--Comport-->
                <Border Grid.Column="5"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="Comport"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xComportTextBlock"
                                          Text="{Binding Model.Comport, 
                                                         FallbackValue=COM3}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--ModuleChannel-->
                <Border Grid.Column="6"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="ModuleChannel"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xModuleChannelTextBlock"
                                          Text="{Binding Model.ModuleChannel, 
                                                         FallbackValue=1}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
                <!--TempChannel-->
                <Border Grid.Column="7"
                        BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                        BorderThickness="1,1,0,0">
                    <StackPanel Orientation="Vertical"
                                Margin="20,0,20,0"  
                                HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Mex:MexTextBlock Text="TempChannel"
                                          Foreground="{StaticResource Mex/ResColor/text_body}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                        <Grid Height="4"/>
                        <Mex:MexTextBlock x:Name="xTempChannelTextBlock"
                                          Text="{Binding Model.TempChannel, 
                                                         FallbackValue=1}"
                                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                                          FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
