<UserControl
    x:Class="DischargerV2.MVVM.Views.ViewSetMode_Step"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress"
    xmlns:Util="clr-namespace:Utility.Common"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:DischargerV2.MVVM.Models"
    xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
    xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
    MinWidth="990"
    MinHeight="448"
    d:DataContext="{d:DesignInstance vm:ViewModelSetMode_Step}"
    d:DesignHeight="448"
    d:DesignWidth="990"
    Background="{StaticResource Mex/ResColor/surface_page}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <Mex:IsDoubleConverter x:Key="IsDoubleConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Margin="32,20,32,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock
                    Grid.Column="0"
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    Foreground="{StaticResource Mex/ResColor/text_body}"
                    Text="{Binding Source={StaticResource DynamicString}, Path=[CapacityOptional]}" />
                <Mex:MexTextBox
                    x:Name="xStandardCapacityTextBox"
                    Grid.Column="2"
                    Width="260"
                    Padding="12,8,12,8"
                    HorizontalAlignment="Left"
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    Text="{Binding Model.StandardCapacity, Mode=TwoWay, Converter={StaticResource IsDoubleConverter}}"
                    TextChanged="xStandardCapacityTextBox_TextChanged"
                    WaterMark="{Binding Source={StaticResource DynamicString}, Path=[Enter]}" />
                <Mex:MexButton
                    x:Name="xLoadButton"
                    Grid.Column="4"
                    Padding="24,9,24,9"
                    ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"
                    CornerRadius="8"
                    FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                    ImageHeight="20"
                    ImageSetLeft="{StaticResource Mex/ResImageSet_Component/LoadButtonPrimary}"
                    ImageWidth="20"
                    Text="{Binding Source={StaticResource DynamicString}, Path=[Load]}"
                    TextPadding="12,0,0,0">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="Click">
                            <b:InvokeCommandAction Command="{Binding LoadStepInfoListCommand}" PassEventArgsToCommand="False" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </Mex:MexButton>
                <Mex:MexButton
                    x:Name="xSaveButton"
                    Grid.Column="6"
                    Padding="24,9,24,9"
                    ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"
                    CornerRadius="8"
                    FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                    ImageHeight="20"
                    ImageSetLeft="{StaticResource Mex/ResImageSet_Component/SaveButtonPrimary}"
                    ImageWidth="20"
                    Text="{Binding Source={StaticResource DynamicString}, Path=[Save]}"
                    TextPadding="12,0,0,0">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="Click">
                            <b:InvokeCommandAction Command="{Binding SaveStepInfoListCommand}" PassEventArgsToCommand="False" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </Mex:MexButton>
            </Grid>
            <Border
                Grid.Row="2"
                Background="{StaticResource Mex/ResColor/surface_primary}"
                BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                BorderThickness="1"
                CornerRadius="8">
                <Mex:MexScrollViewer>
                    <StackPanel
                        x:Name="xContentPanel"
                        Margin="12"
                        Orientation="Vertical">
                        <view:ViewSetMode_StepData />
                    </StackPanel>
                </Mex:MexScrollViewer>
            </Border>
            <Mex:MexCheckBox
                x:Name="xIsCompleteDischargeCheckBox"
                Grid.Row="4"
                ColorSet="{StaticResource Mex/ResColorSet_CheckBox/Primary}"
                FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                Foreground="{StaticResource Mex/ResColor/text_body}"
                IsChecked="{Binding Model.IsCompleteDischarge, Mode=TwoWay}"
                Text="{Binding Source={StaticResource DynamicString}, Path=[FullDischarge]}" />
            <Mex:MexButton
                x:Name="xAddStepButton"
                Grid.Row="4"
                Padding="24,9,24,9"
                HorizontalAlignment="Right"
                BorderThickness="1"
                ColorSet="{StaticResource Mex/ResColorSet_Button/PrimaryOutline}"
                CornerRadius="8"
                FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                ImageHeight="20"
                ImageSetLeft="{StaticResource Mex/ResImageSet_Component/SettingsButtonOutline}"
                ImageWidth="20"
                Text="{Binding Source={StaticResource DynamicString}, Path=[AddStep]}"
                TextPadding="12,0,0,0">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding AddStepInfoCommand}" PassEventArgsToCommand="False" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Mex:MexButton>
        </Grid>
    </Border>
</UserControl>
