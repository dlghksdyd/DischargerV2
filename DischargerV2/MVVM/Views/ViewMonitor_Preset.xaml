<UserControl x:Class="DischargerV2.MVVM.Views.ViewMonitor_Preset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:enum="clr-namespace:DischargerV2.MVVM.Enums"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="152" d:DesignWidth="534"
             MinHeight="152" MinWidth="534">

    <UserControl.Resources>
        <ResourceDictionary>
            <Util:EDischargeTargetToStringConverter x:Key="EDischargeTargetToStringConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                BorderThickness="1"
                CornerRadius="8"
                Background="{StaticResource Mex/ResColor/surface_primary}">
            <StackPanel Orientation="Vertical" Margin="12">
                <Mex:MexTextBlock Text="{Binding Source={StaticResource DynamicString}, Path=[DischargeTarget]}"
                                  Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="8"/>
                <Mex:MexTextBlock x:Name="xDischargeTypeTextBlock"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/heading_h6}">
                    <Mex:MexTextBlock.Text>
                        <MultiBinding Converter="{StaticResource EDischargeTargetToStringConverter}">
                            <MultiBinding.Bindings>
                                <Binding Path="Model.EDischargeTarget" Source="{x:Static vm:ViewModelSetMode_Preset.Instance}"/>
                                <Binding Path="Model.TargetVoltage" Source="{x:Static vm:ViewModelSetMode_Preset.Instance}"/>
                                <Binding Path="Model.TargetSoC" Source="{x:Static vm:ViewModelSetMode_Preset.Instance}"/>
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </Mex:MexTextBlock.Text>
                </Mex:MexTextBlock>
            </StackPanel>
        </Border>
        <Border Grid.Column="2"
                BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                BorderThickness="1"
                CornerRadius="8"
                Background="{StaticResource Mex/ResColor/surface_primary}">
            <StackPanel Orientation="Vertical" Margin="12">
                <Mex:MexTextBlock Text="{Binding Source={StaticResource DynamicString}, Path=[BatteryType]}"
                                  Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="8"/>
                <Mex:MexTextBlock x:Name="xBatteryTypeTextBlock"
                                  Text="{Binding Model.SelectedBatteryType, 
                                                 Source={x:Static vm:ViewModelSetMode_Preset.Instance}}"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
