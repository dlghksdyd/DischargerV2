<UserControl x:Class="DischargerV2.MVVM.Views.ViewSetMode_SafetyCondition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:model="clr-namespace:DischargerV2.MVVM.Models"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelSetMode_SafetyCondition}"
             d:DesignHeight="280" d:DesignWidth="502"
             MinHeight="280" MinWidth="502">

    <UserControl.Resources>
        <ResourceDictionary>
            <Mex:IsDoubleConverter x:Key="IsDoubleConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border CornerRadius="8"
            BorderBrush="{StaticResource Mex/ResColor/border_primary}"
            BorderThickness="1"
            Background="{StaticResource Mex/ResColor/surface_page}">
        <StackPanel Orientation="Vertical" Margin="24">
            <Mex:MexTextBlock Text="Safety Condition"
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
            <Grid Height="16"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0" IsTabStop="False" 
                                  Text="Voltage (V)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Mex:MexTextBox x:Name="xVoltMinTextBox" TabIndex="0"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    Text="{Binding Model.VoltageMin,
                                                   Mode=TwoWay,
                                                   Converter={StaticResource IsDoubleConverter}}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Mex:MexTextBlock Text="~" IsTabStop="False"
                                      Margin="8"
                                      Foreground="{StaticResource Mex/ResColor/text_body}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Mex:MexTextBox x:Name="xVoltMaxTextBox" TabIndex="1"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    Text="{Binding Model.VoltageMax,
                                                   Mode=TwoWay,
                                                   Converter={StaticResource IsDoubleConverter}}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Grid Height="20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0" IsTabStop="False"
                                  Text="Current (A)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Mex:MexTextBox x:Name="xCurrMinTextBox" TabIndex="2"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    Text="{Binding Model.CurrentMin,
                                                   Mode=TwoWay,
                                                   Converter={StaticResource IsDoubleConverter}}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Mex:MexTextBlock Text="~" IsTabStop="False"
                                      Margin="8"
                                      Foreground="{StaticResource Mex/ResColor/text_body}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Mex:MexTextBox x:Name="xCurrMaxTextBox" TabIndex="3"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    Text="{Binding Model.CurrentMax,
                                                   Mode=TwoWay,
                                                   Converter={StaticResource IsDoubleConverter}}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Grid Height="20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Mex:MexTextBlock Grid.Column="0" IsTabStop="False"
                                  Text="Temperature (℃)"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Mex:MexTextBox x:Name="xTempMinTextBox" TabIndex="4"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    Text="{Binding Model.TempMin,
                                                   Mode=TwoWay,
                                                   Converter={StaticResource IsDoubleConverter}}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Mex:MexTextBlock Text="~" IsTabStop="False"
                                      Margin="8"
                                      Foreground="{StaticResource Mex/ResColor/text_body}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Mex:MexTextBox x:Name="xTempMaxTextBox" TabIndex="5"
                                    Padding="12,8,12,8" Width="100" 
                                    WaterMark="0.0"
                                    Text="{Binding Model.TempMax,
                                                   Mode=TwoWay,
                                                   Converter={StaticResource IsDoubleConverter}}"
                                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>