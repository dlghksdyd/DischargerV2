<UserControl x:Class="DischargerV2.MVVM.Views.ViewPopup_SetLogFileName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:model="clr-namespace:DischargerV2.MVVM.Models"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelPopup_Info}"
             Height="Auto" Width="600"
             MinHeight="248" MinWidth="600"
             Background="{StaticResource Mex/ResColor/surface_page}">

    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="8"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Mex:MexLabel Text="{Binding Model.Title, FallbackValue=Title}"
                          Foreground="{StaticResource Mex/ResColor/text_headings}"
                          FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                          TextPadding="12,0,0,0"
                          ImageWidth="24" ImageHeight="24"
                          ImageLeft="{Binding Source={StaticResource Mex/ResImage/info},
                                              Converter={StaticResource ImageColorConverter}, 
                                              ConverterParameter={StaticResource Mex/ResColor/icon_infomation}}"
                          HorizontalAlignment="Left"/>
            <Image x:Name="xCloseImage" 
                   Width="28" Height="28"
                   Source="{Binding Source={StaticResource Mex/ResImage/close},
                                    Converter={StaticResource ImageColorConverter}, 
                                    ConverterParameter={StaticResource Mex/ResColor/icon_primary}}"
                   HorizontalAlignment="Right"
                   Cursor="Hand">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseLeftButtonUp">
                        <b:InvokeCommandAction Command="{Binding CloseCommand}"
                                               PassEventArgsToCommand="False"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Image>
        </Grid>
        <StackPanel Orientation="Vertical" Grid.Row="2">
            <Mex:MexTextBox WaterMark="Enter LogFileName" 
                            Padding="12,8,12,8"
                            CornerRadius="8"
                            Text="{Binding Model.Comment, 
                                           Mode=TwoWay}"
                            FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                            ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                            KeyUp="MexTextBox_KeyUp"/>
            <Mex:MexTextBlock Padding="12 4 12 8"
                              Text="{Binding Description, 
                                             FallbackValue=Please enter LogfileName}"
                              FontSet="{StaticResource Mex/ResFontSet/body_sm_regular}"
                              Foreground="{StaticResource Mex/ResColor/text_error}"
                              HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal" FlowDirection="RightToLeft">
            <Mex:MexButton Padding="24,10,24,10"
                           CornerRadius="8"
                           Text="{Binding Model.ConfirmText, FallbackValue=Confirm}"
                           FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/Tertiary}"
                           IsEnabled="{Binding IsEnabledConfirm, 
                                               UpdateSourceTrigger=PropertyChanged}"
                           Cursor="Hand">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding ExitCommand}"
                                               PassEventArgsToCommand="False"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Mex:MexButton>
            <Grid Width="12"/>
            <Mex:MexButton Padding="24,10,24,10"
                           CornerRadius="8"
                           Text="Cancel"
                           FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                           ColorSet="{StaticResource Mex/ResColorSet_Button/Secondary}"
                           Cursor="Hand">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding CloseCommand}"
                                               PassEventArgsToCommand="False"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Mex:MexButton>
        </StackPanel>
    </Grid>
</UserControl>
