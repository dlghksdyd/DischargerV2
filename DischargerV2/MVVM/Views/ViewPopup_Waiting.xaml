<UserControl x:Class="DischargerV2.MVVM.Views.ViewPopup_Waiting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:ViewModelPopup_Warning}"
             d:DesignHeight="248" d:DesignWidth="600"
             MinHeight="248" MinWidth="600"
             Background="{StaticResource Mex/ResColor/surface_page}">

    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="8"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Image Width="30" Height="30" Source="{Binding Source={StaticResource Mex/ResImage/progress_circle}, Converter={StaticResource ImageColorConverter}, ConverterParameter={StaticResource Mex/ResColor/text_headings}}">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="xRotate" CenterX="15" CenterY="15"/>
                    </Image.RenderTransform>
                </Image>
                <Mex:MexLabel Text="{Binding Title, FallbackValue=Title}" Foreground="{StaticResource Mex/ResColor/text_headings}" FontSet="{StaticResource Mex/ResFontSet/heading_h6}" TextPadding="12 0 0 0" HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>
        <Mex:MexTextBlock Grid.Row="2"
                          Text="{Binding Comment, FallbackValue=Comment}"
                          Foreground="{StaticResource Mex/ResColor/text_body}"
                          FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
    </Grid>
</UserControl>
