<UserControl
    x:Class="DischargerV2.MVVM.Views.ViewPopup_CreateNewUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress"
    xmlns:Util="clr-namespace:Utility.Common"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
    xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
    Width="480"
    Height="592"
    MinWidth="480"
    MinHeight="592"
    d:DataContext="{d:DesignInstance vm:ViewModelPopup_CreateNewUser}"
    d:DesignHeight="592"
    d:DesignWidth="480"
    Background="{StaticResource Mex/ResColor/surface_page}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="8" />
            </Style>
            <Util:InvertBoolConverter x:Key="InvertBoolConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Mex:MexTextBlock
                HorizontalAlignment="Left"
                FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                Foreground="{StaticResource Mex/ResColor/text_headings}"
                Text="{Binding Source={StaticResource DynamicString}, Path=[CreateNewUser]}" />
            <Image
                x:Name="xCloseImage"
                Width="28"
                Height="28"
                HorizontalAlignment="Right"
                Cursor="Hand"
                Source="{Binding Source={StaticResource Mex/ResImage/close}, Converter={StaticResource ImageColorConverter}, ConverterParameter={StaticResource Mex/ResColor/icon_primary}}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseLeftButtonUp">
                        <b:InvokeCommandAction Command="{Binding CloseCommand}" PassEventArgsToCommand="False" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Image>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--  Permission RadioButton  -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Mex:MexRadioButton
                    x:Name="xUserRadioButton"
                    VerticalContentAlignment="Center"
                    ButtonSize="24"
                    ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    Foreground="{StaticResource Mex/ResColor/text_body}"
                    GroupName="Permission"
                    IsChecked="{Binding Model.IsAdmin, Mode=TwoWay, Converter={StaticResource InvertBoolConverter}, FallbackValue=true, TargetNullValue=true}"
                    Text="{Binding Source={StaticResource DynamicString}, Path=[User]}"
                    TextPadding="12" />
                <Grid Width="16" />
                <Mex:MexRadioButton
                    x:Name="xAdminRadioButton"
                    ButtonSize="24"
                    ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    Foreground="{StaticResource Mex/ResColor/text_body}"
                    GroupName="Permission"
                    IsChecked="{Binding Model.IsAdmin, Mode=TwoWay, FallbackValue=false, TargetNullValue=false}"
                    Text="{Binding Source={StaticResource DynamicString}, Path=[Admin]}"
                    TextPadding="12" />
            </StackPanel>
            <!--  ID  -->
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <Mex:MexTextBlock
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    Foreground="{StaticResource Mex/ResColor/text_body}"
                    IsTabStop="False"
                    Text="{Binding Source={StaticResource DynamicString}, Path=[Id]}" />
                <Grid Height="4" />
                <Mex:MexTextBox
                    x:Name="xIdTextBox"
                    Padding="12,8,12,8"
                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                    CornerRadius="8"
                    FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                    TabIndex="0"
                    Text="{Binding Model.Id, Mode=TwoWay}"
                    WaterMark="{Binding Source={StaticResource DynamicString}, Path=[EnterId]}" />
            </StackPanel>
            <!--  Password  -->
            <StackPanel Grid.Row="4" Orientation="Vertical">
                <Mex:MexTextBlock
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    Foreground="{StaticResource Mex/ResColor/text_body}"
                    IsTabStop="False"
                    Text="{Binding Source={StaticResource DynamicString}, Path=[Password]}" />
                <Grid Height="4" />
                <Mex:MexPasswordBox
                    x:Name="xPasswordBox"
                    Padding="12,8,12,8"
                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                    CornerRadius="8"
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    ImageSetHidePassword="{StaticResource Mex/ResImageSet_Toggle/Visibility}"
                    TabIndex="1"
                    Text="{Binding Model.Password, Mode=TwoWay}"
                    WaterMark="{Binding Source={StaticResource DynamicString}, Path=[EnterPassword]}" />
            </StackPanel>
            <!--  Confirm Password  -->
            <StackPanel Grid.Row="6" Orientation="Vertical">
                <Mex:MexTextBlock
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    Foreground="{StaticResource Mex/ResColor/text_body}"
                    IsTabStop="False"
                    Text="{Binding Source={StaticResource DynamicString}, Path=[ConfirmPassword]}" />
                <Grid Height="4" />
                <Mex:MexPasswordBox
                    x:Name="xConfirmPasswordBox"
                    Padding="12,8,12,8"
                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                    CornerRadius="8"
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    ImageSetHidePassword="{StaticResource Mex/ResImageSet_Toggle/Visibility}"
                    TabIndex="2"
                    Text="{Binding Model.ConfirmPassword, Mode=TwoWay}"
                    WaterMark="{Binding Source={StaticResource DynamicString}, Path=[ReEnterPassword]}" />
            </StackPanel>
            <!--  User Name  -->
            <StackPanel Grid.Row="8" Orientation="Vertical">
                <Mex:MexTextBlock
                    FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                    Foreground="{StaticResource Mex/ResColor/text_body}"
                    IsTabStop="False"
                    Text="{Binding Source={StaticResource DynamicString}, Path=[UserName]}" />
                <Grid Height="4" />
                <Mex:MexTextBox
                    x:Name="xUserNameTextBox"
                    Padding="12,8,12,8"
                    ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                    CornerRadius="8"
                    FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                    TabIndex="3"
                    Text="{Binding Model.Name, Mode=TwoWay}"
                    WaterMark="{Binding Source={StaticResource DynamicString}, Path=[EnterUserName]}" />
            </StackPanel>
        </Grid>
        <!--  Cancel & Create Button  -->
        <StackPanel
            Grid.Row="4"
            FlowDirection="RightToLeft"
            Orientation="Horizontal">
            <Mex:MexButton
                x:Name="xCreateButton"
                Padding="24,10,24,10"
                ColorSet="{StaticResource Mex/ResColorSet_Button/Primary}"
                CornerRadius="8"
                FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                Text="{Binding Source={StaticResource DynamicString}, Path=[Create]}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding InsertNewDataCommand}" PassEventArgsToCommand="False" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Mex:MexButton>
            <Grid Width="12" />
            <Mex:MexButton
                x:Name="xCancelButton"
                Padding="24,10,24,10"
                ColorSet="{StaticResource Mex/ResColorSet_Button/Secondary}"
                CornerRadius="8"
                FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                Text="{Binding Source={StaticResource DynamicString}, Path=[Cancel]}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding CloseCommand}" PassEventArgsToCommand="False" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Mex:MexButton>
        </StackPanel>
    </Grid>
</UserControl>
