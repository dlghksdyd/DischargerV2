<UserControl x:Class="DischargerV2.MVVM.Views.ViewMonitor_Simple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:enum="clr-namespace:DischargerV2.MVVM.Enums"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="208" d:DesignWidth="534"
             MinHeight="208" MinWidth="534">

    <UserControl.Resources>
        <ResourceDictionary>
            <Util:EDischargeTargetToStringConverter x:Key="EDischargeTargetToStringConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                BorderThickness="1"
                CornerRadius="8"
                Background="{StaticResource Mex/ResColor/surface_primary}">
            <StackPanel Orientation="Vertical" Margin="12">
                <Mex:MexTextBlock Text="Discharger Type"
                                  Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                <Grid Height="8"/>
                <Mex:MexTextBlock x:Name="xDischargeTypeTextBlock"
                                  Foreground="{StaticResource Mex/ResColor/text_headings}"
                                  FontSet="{StaticResource Mex/ResFontSet/heading_h6}">
                    <Mex:MexTextBlock.Text>
                        <MultiBinding Converter="{StaticResource EDischargeTargetToStringConverter}">
                            <MultiBinding.Bindings>
                                <Binding Path="Model.EDischargeType" Source="{x:Static vm:ViewModelSetMode_Simple.Instance}"/>
                                <Binding Path="Model.TargetVoltage" Source="{x:Static vm:ViewModelSetMode_Simple.Instance}"/>
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </Mex:MexTextBlock.Text>
                </Mex:MexTextBlock>
            </StackPanel>
        </Border>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="{StaticResource Mex/ResColor/surface_primary}">
                <StackPanel Orientation="Vertical" Margin="12">
                    <Mex:MexTextBlock Text="Standard Capacity (Ah)"
                                      Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    <Grid Height="8"/>
                    <Mex:MexTextBlock x:Name="xStandardCapacityTextBlock"
                                      Text="{Binding Model.StandardCapacity, 
                                                     Source={x:Static vm:ViewModelSetMode_Simple.Instance}}"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2"
                    BorderBrush="{StaticResource Mex/ResColor/border_primary}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="{StaticResource Mex/ResColor/surface_primary}">
                <StackPanel Orientation="Vertical" Margin="12">
                    <Mex:MexTextBlock Text="Standard Voltage (V)"
                                      Foreground="{StaticResource Mex/ResColor/text_infomation}"
                                      FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"/>
                    <Grid Height="8"/>
                    <Mex:MexTextBlock x:Name="xStandardVoltageTextBlock"
                                      Text="{Binding Model.StandardVoltage, 
                                                     Source={x:Static vm:ViewModelSetMode_Simple.Instance}}"
                                      Foreground="{StaticResource Mex/ResColor/text_headings}"
                                      FontSet="{StaticResource Mex/ResFontSet/heading_h6}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
