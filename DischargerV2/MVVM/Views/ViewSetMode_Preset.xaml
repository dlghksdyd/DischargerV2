<UserControl x:Class="DischargerV2.MVVM.Views.ViewSetMode_Preset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:model="clr-namespace:DischargerV2.MVVM.Models"
             xmlns:enum="clr-namespace:DischargerV2.MVVM.Enums"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelSetMode_Preset}"
             d:DesignHeight="448" d:DesignWidth="990"
             MinHeight="448" MinWidth="990"
             Background="{StaticResource Mex/ResColor/surface_page}">

    <UserControl.Resources>
        <ResourceDictionary>
            <Util:EDischargeTargetToBoolConverter x:Key="EDischargeTargetToBoolConverter"/>
            <Mex:IsDoubleConverter x:Key="IsDoubleConverter"/>
            <Mex:IsInt32Converter x:Key="IsInt32Converter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Margin="32,24,32,24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="xBatteryTypeStackPanel" Grid.Row="0" 
                        Orientation="Vertical">
                <Mex:MexLabel Text="{Binding Source={StaticResource DynamicString}, Path=[BatteryType]}" 
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                              ImageWidth="6" ImageHeight="6"
                              ImageLeft="{Binding Source={StaticResource Mex/ResImage/asterisk},
                                                  Converter={StaticResource ImageColorConverter}, 
                                                  ConverterParameter={StaticResource Mex/ResColor/icon_error}}"
                              Margin="-6,0,0,0"
                              HorizontalAlignment="Left" VerticalAlignment="Center"
                              VerticalContentAlignment="Top"/>
                <Grid Height="16"/>
                <Mex:MexItemBox x:Name="xBatteryTypeItemBox" 
                                Width="{Binding ElementName=xBatteryTypeStackPanel, Path=ActualWidth}" 
                                IsParent="False"
                                BorderThickness="1"
                                CornerRadius="8"
                                ItemSource="{Binding Model.BatteryTypeList}"
                                ItemSourceHeight="48"
                                ItemSourceViewCount="4"
                                ItemSourcePadding="16,12,16,12"
                                SelectedItem="{Binding Model.SelectedBatteryType, Mode=TwoWay, FallbackValue=null}"
                                FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"
                                ColorSet="{StaticResource Mex/ResColorSet_ItemBox/Primary}"
                                MouseLeftButtonUp="xBatteryTypeItemBox_MouseLeftButtonUp">
                    <Mex:MexScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Vertical">
                            <Mex:MexTextBlock Text="EV6 Long Range Pack 1"/>
                            <Mex:MexTextBlock Text="EV6 Long Range Pack 2"/>
                            <Mex:MexTextBlock Text="EV6 Long Range Pack 3"/>
                            <Mex:MexTextBlock Text="EV6 Long Range Pack 4"/>
                            <Mex:MexTextBlock Text="EV6 Long Range Pack 5"/>
                        </StackPanel>
                    </Mex:MexScrollViewer>
                </Mex:MexItemBox>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Mex:MexTextBlock Text="{Binding Source={StaticResource DynamicString}, Path=[CurrentSoc]}"
                                  Foreground="{StaticResource Mex/ResColor/text_body}"
                                  FontSet="{StaticResource Mex/ResFontSet/body_md_medium}"/>
                <Grid Width="12"/>
                <Mex:MexTextBox Padding="12,8,12,8" Width="120"
                                Text="{Binding Model.CurrentSoC, Mode=TwoWay}"
                                ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Vertical">
                <Mex:MexLabel Text="{Binding Source={StaticResource DynamicString}, Path=[DischargeTarget]}" 
                              Foreground="{StaticResource Mex/ResColor/text_headings}"
                              FontSet="{StaticResource Mex/ResFontSet/heading_h6}"
                              ImageWidth="6" ImageHeight="6"
                              ImageLeft="{Binding Source={StaticResource Mex/ResImage/asterisk},
                                                  Converter={StaticResource ImageColorConverter}, 
                                                  ConverterParameter={StaticResource Mex/ResColor/icon_error}}"
                              Margin="-6,0,0,0"
                              HorizontalAlignment="Left" VerticalAlignment="Center"
                              VerticalContentAlignment="Top"/>
                <Grid Height="16"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Mex:MexRadioButton GroupName="DischargeTarget" Grid.Column="0"
                                        Text="{Binding Source={StaticResource DynamicString}, Path=[FullDischarge]}"
                                        TextPadding="12" ButtonSize="24"
                                        Foreground="{StaticResource Mex/ResColor/text_body}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                                        VerticalContentAlignment="Center"
                                        IsChecked="{Binding Model.EDischargeTarget, 
                                                            Mode=TwoWay,
                                                            Converter={StaticResource EDischargeTargetToBoolConverter},
                                                            ConverterParameter={x:Static enum:EDischargeTarget.Full}}"/>
                    <Mex:MexRadioButton GroupName="DischargeTarget" Grid.Column="2"
                                        Text="{Binding Source={StaticResource DynamicString}, Path=[0vDischarge]}"
                                        TextPadding="12" ButtonSize="24"
                                        Foreground="{StaticResource Mex/ResColor/text_body}"
                                        FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                        ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                                        VerticalContentAlignment="Center"
                                        IsChecked="{Binding Model.EDischargeTarget, 
                                                            Mode=TwoWay,
                                                            Converter={StaticResource EDischargeTargetToBoolConverter},
                                                            ConverterParameter={x:Static enum:EDischargeTarget.Zero}}"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="4">
                        <Mex:MexRadioButton GroupName="DischargeTarget"
                                            x:Name="xTargetVoltageRadioButton"
                                            Text="{Binding Source={StaticResource DynamicString}, Path=[TargetVoltage]}"
                                            TextPadding="12,0,0,0" ButtonSize="24"
                                            Foreground="{StaticResource Mex/ResColor/text_body}"
                                            FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                            ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                                            VerticalContentAlignment="Center"
                                            IsChecked="{Binding Model.EDischargeTarget, 
                                                                Mode=TwoWay,
                                                                Converter={StaticResource EDischargeTargetToBoolConverter},
                                                                ConverterParameter={x:Static enum:EDischargeTarget.Voltage}}"/>
                        <Grid Width="12"/>
                        <Mex:MexTextBox x:Name="xTargetVoltTextBox"
                                        Padding="12,8,12,8" Width="130"
                                        WaterMark="{Binding Source={StaticResource DynamicString}, Path=[Enter]}"
                                        Text="{Binding Model.TargetVoltage, 
                                                       Mode=TwoWay, 
                                                       Converter={StaticResource IsDoubleConverter}}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                        IsEnabled="{Binding ElementName=xTargetVoltageRadioButton, 
                                                            Path=IsChecked}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="6">
                        <Mex:MexRadioButton GroupName="DischargeTarget"
                                            x:Name="xTargetSocRadioButton"
                                            Text="{Binding Source={StaticResource DynamicString}, Path=[TargetSoc]}"
                                            TextPadding="12,0,0,0" ButtonSize="24"
                                            Foreground="{StaticResource Mex/ResColor/text_body}"
                                            FontSet="{StaticResource Mex/ResFontSet/body_md_regular}"
                                            ColorSet="{StaticResource Mex/ResColorSet_RadioButton/Primary}"
                                            VerticalContentAlignment="Center"
                                            IsChecked="{Binding Model.EDischargeTarget, 
                                                                Mode=TwoWay,
                                                                Converter={StaticResource EDischargeTargetToBoolConverter},
                                                                ConverterParameter={x:Static enum:EDischargeTarget.SoC}}"/>
                        <Grid Width="12"/>
                        <Mex:MexTextBox x:Name="xTargetSoCTextBox"
                                        Padding="12,8,12,8" Width="120"
                                        WaterMark="{Binding Source={StaticResource DynamicString}, Path=[Enter]}"
                                        Text="{Binding Model.TargetSoC, 
                                                       Mode=TwoWay, 
                                                       Converter={StaticResource IsInt32Converter}}"
                                        ColorSet="{StaticResource Mex/ResColorSet_TextBox/Primary}"
                                        IsEnabled="{Binding ElementName=xTargetSocRadioButton, 
                                                            Path=IsChecked}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
