<UserControl x:Class="DischargerV2.MVVM.Views.ViewUserSetting_Add"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Util="clr-namespace:Utility.Common"
             xmlns:Mex="clr-namespace:MExpress.Mex;assembly=MExpress" 
             xmlns:view="clr-namespace:DischargerV2.MVVM.Views"
             xmlns:vm="clr-namespace:DischargerV2.MVVM.ViewModels"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:DischargerV2.UserControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:ViewModelUserSetting_Add}"
             d:DesignHeight="144" d:DesignWidth="360"
             MinHeight="144" MinWidth="360">

    <Border CornerRadius="8"
            BorderThickness="1"
            Background="Transparent">
        <Border.BorderBrush>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Rectangle Stroke="{StaticResource Mex/ResColor/border_primary}"
                               StrokeThickness="1"
                               StrokeDashArray="4"
                               RadiusX="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=CornerRadius.TopRight}"
                               RadiusY="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=CornerRadius.BottomLeft}"
                               Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualWidth}"
                               Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualHeight}"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.BorderBrush>
        <Mex:MexButton x:Name="xAddButton" 
                       Padding="24,9,24,9"
                       BorderThickness="1"
                       CornerRadius="8"
                       ImageWidth="20" ImageHeight="20"
                       ImageSetLeft="{StaticResource Mex/ResImageSet_Component/AddUserButtonOutline}"
                       Text="Add New User"
                       TextPadding="12,0,0,0"
                       FontSet="{StaticResource Mex/ResFontSet/body_sm_medium}"
                       ColorSet="{StaticResource Mex/ResColorSet_Button/PrimaryOutline}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="Click">
                    <b:InvokeCommandAction Command="{Binding xAddButton_ClickCommand}"
                                           PassEventArgsToCommand="False"/>
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Mex:MexButton>
    </Border>
</UserControl>
