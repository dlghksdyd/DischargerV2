<Window
    x:Class="Mindims.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hy="http://schemas.hysoft.com/wpf/2025/xaml"
    xmlns:local="clr-namespace:Mindims"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1920"
    Height="1080"
    MaxWidth="1920"
    MaxHeight="1080"
    d:DataContext="{d:DesignInstance local:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    AllowsTransparency="True"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <hy:HyTitleBar
            Padding="10"
            ExitAppCommand="{Binding ExitAppCommand}"
            IconPadding="8"
            IconSize="32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,40,0"
                        VerticalAlignment="Center"
                        FontSize="{hy:FontSize _2Xl}"
                        Text="재사용 배터리 통합 관리 시스템" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="{hy:FontSize Xl}"
                        Text="v1.0.0" />
                </StackPanel>
                <Grid Grid.Column="1" />
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock
                        Width="260"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        FontSize="{hy:FontSize Xl}"
                        Text="{Binding CurrentTime, StringFormat=yyyy-MM-dd HH:mm:ss}" />
                    <Rectangle
                        Width="1"
                        Height="50"
                        Margin="0,0,40,0"
                        Fill="{hy:Color TitleBarText}" />
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="{hy:FontSize Xl}"
                        Text="Admin" />
                    <TextBlock
                        Margin="0,0,40,0"
                        VerticalAlignment="Center"
                        FontSize="{hy:FontSize Xl}"
                        Text="님" />
                    <Rectangle
                        Width="1"
                        Height="50"
                        Margin="0,0,40,0"
                        Fill="{hy:Color TitleBarText}" />
                    <hy:HyIcon
                        Width="46"
                        Height="46"
                        Padding="8"
                        CornerRadius="4"
                        Cursor="Hand"
                        Source="Settings"
                        Color="{hy:Color TitleBarText}">
                        <hy:HyIcon.Style>
                            <Style TargetType="hy:HyIcon">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#33FFFFFF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </hy:HyIcon.Style>
                    </hy:HyIcon>
                    <hy:HyIcon
                        Width="46"
                        Height="46"
                        Margin="0,0,40,0"
                        Padding="8"
                        CornerRadius="4"
                        Cursor="Hand"
                        Source="ManageAccounts"
                        Color="{hy:Color TitleBarText}">
                        <hy:HyIcon.Style>
                            <Style TargetType="hy:HyIcon">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#33FFFFFF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </hy:HyIcon.Style>
                    </hy:HyIcon>
                    <Rectangle
                        Width="1"
                        Height="50"
                        Margin="0,0,40,0"
                        Fill="{hy:Color TitleBarText}" />
                </StackPanel>
            </Grid>
        </hy:HyTitleBar>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ContentPresenter Grid.Column="0" Content="{Binding LeftMenuView}" />
            <ContentPresenter Grid.Column="1" Content="{Binding SharedContext.Content}" />
        </Grid>
        <ContentPresenter
            Grid.Row="0"
            Grid.RowSpan="2"
            Content="{x:Static hy:ModalManager.View}" />
    </Grid>
</Window>
