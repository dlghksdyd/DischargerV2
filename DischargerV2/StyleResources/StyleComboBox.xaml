    <ControlTemplate TargetType="ToggleButton" x:Key="ComboBoxToggleButtonTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="2" Name="Border" Background="{StaticResource SolidColorBrush.Grey0}" 
                    BorderBrush="{StaticResource SolidColorBrush.Grey1000}" CornerRadius="5" BorderThickness="1"/>
            <Image x:Name="ArrowImage" Grid.Column="1" Margin="0,8,12,8" HorizontalAlignment="Center" 
                   Source="{Binding Source={x:Static res:ResourceImg.drop_down}, Converter={StaticResource BitmapToImageSourceConverter}}"></Image>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter TargetName="ArrowImage" Property="Source" 
                        Value="{Binding Source={x:Static res:ResourceImg.drop_up}, Converter={StaticResource BitmapToImageSourceConverter}}"></Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="ComboBox.H6.Left" TargetType="{x:Type ComboBox}">
        <Setter Property="UIElement.SnapsToDevicePixels" Value="True"/>
        <Setter Property="FrameworkElement.OverridesDefaultStyle" Value="True"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="TextElement.Foreground" Value="{StaticResource SolidColorBrush.Grey1000}"/>
        <Setter Property="TextElement.FontSize" Value="{DynamicResource FontSize.H6}"/>
        <Setter Property="TextElement.FontWeight" Value="{DynamicResource FontWeight.H6}"></Setter>
        <Setter Property="FrameworkElement.FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <ToggleButton Name="ToggleButton" Grid.Column="0" Grid.ColumnSpan="100" ClickMode="Press" Focusable="False"
                                              IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                              Template="{StaticResource ComboBoxToggleButtonTemplate}"/>

                        <ContentPresenter Name="ContentSite" IsHitTestVisible="False"
                                                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,30,0"
                                                Content="{TemplateBinding ComboBox.SelectionBoxItem}"
                                                ContentTemplate="{TemplateBinding ComboBox.SelectionBoxItemTemplate}"
                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                        <TextBox Name="PART_EditableTextBox"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,30,0"
                                 IsReadOnly="{TemplateBinding IsReadOnly}"
                                 Visibility="Hidden" Focusable="True" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}">
                        </TextBox>
                        <Popup Name="Popup" Placement="Bottom"
                                       Focusable="False" AllowsTransparency="False"
                                       IsOpen="{TemplateBinding ComboBox.IsDropDownOpen}"
                                       PopupAnimation="Slide">
                            <Grid Name="DropDown" 
                                  Background="Transparent"
                                  SnapsToDevicePixels="True"
                                  MinWidth="{TemplateBinding FrameworkElement.ActualWidth}"
                                  MaxHeight="{TemplateBinding ComboBox.MaxDropDownHeight}">
                                <Border Name="DropDownBorder" Background="{StaticResource SolidColorBrush.Grey0}"
                                        BorderThickness="1" BorderBrush="{StaticResource SolidColorBrush.Grey1000}"/>
                                <ScrollViewer SnapsToDevicePixels="True">
                                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"></ItemsPresenter>
                                </ScrollViewer>
                            </Grid>
                        </Popup>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="ItemsControl.HasItems" Value="False">
                            <Setter Property="FrameworkElement.MinHeight" TargetName="DropDownBorder" Value="95"/>
                        </Trigger>
                        <Trigger Property="UIElement.IsEnabled" Value="False">
                            <Setter Property="TextElement.Foreground" Value="Black"/>
                        </Trigger>
                        <Trigger Property="ItemsControl.IsGrouping" Value="True">
                            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                        </Trigger>
                        <Trigger Property="ComboBox.IsEditable" Value="True">
                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False"/>
                            <Setter Property="UIElement.Visibility" TargetName="PART_EditableTextBox" Value="Visible"/>
                            <Setter Property="UIElement.Visibility" TargetName="ContentSite" Value="Hidden"/>
                        </Trigger>
                        <Trigger Property="Popup.IsOpen" Value="True">
                            <Setter Property="ToggleButton.IsChecked" TargetName="ToggleButton" Value="True"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

